<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_technician_ranking"
    style="@style/main_page_margin_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/main_ranking"
        style="@style/relative_layout_title_style">

        <TextView
            style="@style/main_fragment_layout_title_left_style"
            android:drawableLeft="@drawable/img_ranking"
            android:text="@string/layout_technician_ranking_title" />

        <TextView
            style="@style/main_fragment_layout_title_right_style"
            android:id="@+id/ranking_more"
            android:text="@string/layout_technician_ranking_check_all" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/small_space">

        <!--拓客之星-->
        <LinearLayout
            android:id="@+id/ll_star_user"
            style="@style/main_fragment_layout_technician_ranking_section_style">
            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_ranking_crown"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="@dimen/margin_2" />
                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/bg_ranking_register" />

                <com.xmd.manager.widget.CircleImageView
                    android:id="@+id/cv_star_register"
                    style="@style/main_fragment_layout_technician_ranking_avatar_style" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:src="@drawable/img_ranking_register"
                    android:layout_marginBottom="5dp" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_star_register_user"
                style="@style/main_fragment_layout_technician_ranking_value_style"
                android:text="@string/layout_technician_no_technician" />
            <TextView
                android:id="@+id/tv_star_register_tech_no"
                style="@style/main_fragment_layout_technician_ranking_label_style"
                android:text="@string/layout_technician_star_register_user" />

        </LinearLayout>

        <View style="@style/vertical_line" />

        <!-- 销售之星 -->
        <LinearLayout
            android:id="@+id/ll_star_sale"
            style="@style/main_fragment_layout_technician_ranking_section_style">
            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_ranking_crown"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="@dimen/margin_2" />
                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/bg_ranking_sale" />

                <com.xmd.manager.widget.CircleImageView
                    android:id="@+id/cv_star_sales"
                    style="@style/main_fragment_layout_technician_ranking_avatar_style" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:src="@drawable/img_ranking_sale"
                    android:layout_marginBottom="5dp" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_star_sales"
                style="@style/main_fragment_layout_technician_ranking_value_style"
                android:text="@string/layout_technician_no_technician" />
            <TextView
                android:id="@+id/tv_star_sales_tech_no"
                style="@style/main_fragment_layout_technician_ranking_label_style"
                android:text="@string/layout_technician_star_sales" />


        </LinearLayout>

        <View style="@style/vertical_line" />

        <!-- 服务之星 -->
        <LinearLayout
            android:id="@+id/ll_star_service"
            style="@style/main_fragment_layout_technician_ranking_section_style">
            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_ranking_crown"
                    android:layout_gravity="top|left"
                    android:layout_marginLeft="@dimen/margin_2" />
                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="@drawable/bg_ranking_server" />

                <com.xmd.manager.widget.CircleImageView
                    android:id="@+id/cv_star_service"
                    style="@style/main_fragment_layout_technician_ranking_avatar_style" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:src="@drawable/img_ranking_server"
                    android:layout_marginBottom="5dp" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_star_service"
                style="@style/main_fragment_layout_technician_ranking_value_style"
                android:text="@string/layout_technician_no_technician" />
            <TextView
                android:id="@+id/tv_star_service_tech_no"
                style="@style/main_fragment_layout_technician_ranking_label_style"
                android:text="@string/layout_technician_star_service" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
