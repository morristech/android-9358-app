<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/toolbar" />
    <com.xmd.manager.widget.ViewPagerTabIndicator
        android:id="@+id/tab_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.xmd.manager.widget.ViewPagerTabIndicator>

    <View
        style="@style/line"
        android:background="@color/tab_bottom_line_color" />
    <TextView
        android:id="@+id/customer_group"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/inter_space"
        android:layout_height="48dp"
        android:text="分组"
        android:gravity="left|center_vertical"
        android:drawablePadding="@dimen/small_space"
        android:drawableLeft="@drawable/image_group_mark"
        android:background="@drawable/bg_white_pressed"
        android:paddingTop="@dimen/margin_2"
        android:paddingBottom="@dimen/margin_2" />
    <View
        style="@style/line"
        android:background="@color/tab_bottom_line_color" />
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_customer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


</LinearLayout>
