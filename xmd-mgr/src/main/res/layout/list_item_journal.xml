<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="No.123"
            android:textColor="@color/colorFont2" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_no"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/stroke_light_gray"
            android:gravity="center"
            android:minHeight="24dp"
            android:minWidth="48dp"
            android:text="已发布"
            android:textSize="@dimen/font_caption_regular" />
    </RelativeLayout>

    <TextView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:background="@color/divider_color" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="皇朝会所周年店庆"
            android:textColor="@color/colorFont1"
            android:textSize="@dimen/font_subheading_regular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tv_viewCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:drawableLeft="@drawable/icon_view"
                android:drawablePadding="4dp"
                android:text="2022查看"
                android:textColor="@color/colorHint"
                android:textSize="@dimen/font_caption_regular" />

            <TextView
                android:id="@+id/tv_praisedCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:drawableLeft="@drawable/icon_praise"
                android:drawablePadding="4dp"
                android:text="2022赞"
                android:textColor="@color/colorHint"
                android:textSize="@dimen/font_caption_regular" />

            <TextView
                android:id="@+id/tv_sharedCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_share"
                android:drawablePadding="4dp"
                android:text="2022分享"
                android:textColor="@color/colorHint"
                android:textSize="@dimen/font_caption_regular" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/btn_preview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:src="@drawable/icon_right" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_last_modified_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="2016-11-01 14:23 编辑"
            android:textColor="@color/colorFont2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="end">

            <TextView
                android:id="@+id/btn_edit"
                style="@style/button_light_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:drawableLeft="@drawable/icon_edit2"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:minHeight="16dp"


                android:text="@string/journal_edit"
                android:textColor="@color/white"
                android:textSize="@dimen/font_caption_regular" />

            <TextView
                android:id="@+id/btn_publish"
                style="@style/button_light_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:drawableLeft="@drawable/icon_publish"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:minHeight="16dp"
                android:text="@string/journal_publish"
                android:textColor="@color/white"
                android:textSize="@dimen/font_caption_regular" />

            <TextView
                android:id="@+id/btn_offline"
                style="@style/button_light_yellow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:drawableLeft="@drawable/icon_offline"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:minHeight="16dp"
                android:text="@string/journal_offline"
                android:textColor="@color/white"
                android:textSize="@dimen/font_caption_regular" />

            <TextView
                android:id="@+id/btn_delete"
                style="@style/button_light_red"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/icon_delete"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:minHeight="16dp"
                android:text="@string/journal_delete"
                android:textColor="@color/white"
                android:textSize="@dimen/font_caption_regular" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>