<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_rect_white_bg"
    android:minWidth="@dimen/dialog_min_width"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="top|center"
        android:text="@string/pay_result_shortage"
        android:textColor="@color/dialog_title_text_color"
        android:textSize="@dimen/dialog_content_title_size" />

    <TextView
        android:id="@+id/dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="@color/dialog_content_text_color"
        android:textSize="@dimen/dialog_content_text_size" />

    <View
        style="@style/dialog_line"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/dialog_positive"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height"
        android:background="@drawable/rect_no_corner_bg"
        android:text="чбошод"
        android:textColor="@color/colorMain"
        android:textSize="@dimen/fontTitle" />


</LinearLayout>