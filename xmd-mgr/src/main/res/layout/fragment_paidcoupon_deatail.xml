<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_activity_drawer_title_height"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/horizontal_avg_layout"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/purchased_dianzhong" />

            <TextView
                android:id="@+id/tv_purchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/coupons_margin_top"
                android:text="0" />

        </LinearLayout>

        <View style="@style/tab_vertical_line" />

        <LinearLayout
            style="@style/horizontal_avg_layout"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/used_dianzhong" />

            <TextView
                android:id="@+id/tv_use"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/coupons_margin_top"
                android:text="0" />

        </LinearLayout>

        <View style="@style/tab_vertical_line" />

        <LinearLayout
            style="@style/horizontal_avg_layout"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shared_dianzhong" />

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/coupons_margin_top"
                android:text="0" />

        </LinearLayout>

        <View style="@style/tab_vertical_line" />

        <LinearLayout
            style="@style/horizontal_avg_layout"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pasted_dianzhong" />

            <TextView
                android:id="@+id/tv_pasted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/coupons_margin_top"
                android:text="0" />

        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/line"
        android:background="@color/tab_bottom_line_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_activity_drawer_title_height">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/statistics_fragment_total_income"
            android:layout_marginLeft="20dp" />


        <TextView
            android:id="@+id/tv_total_income"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="0元"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp" />
    </RelativeLayout>

    <View
        style="@style/line"
        android:background="@color/tab_bottom_line_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_activity_drawer_title_height">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/statistics_fragment_tech_income"
            android:layout_marginLeft="20dp" />


        <TextView
            android:id="@+id/tv_technician_income"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="0元"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp" />
    </RelativeLayout>


</LinearLayout>