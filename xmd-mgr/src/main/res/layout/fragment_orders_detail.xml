<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FAFAFA"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/inter_space"
            android:layout_height="@dimen/inter_space"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/inter_space"

            android:background="@drawable/order_detail_un_accept" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/small_space"
            android:paddingLeft="@dimen/margin_10"
            android:paddingTop="@dimen/small_space"
            android:text="@string/unAccept_orders_total"
            android:textColor="@color/colorClubItemTitle" />

        <TextView
            android:id="@+id/un_accept_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="@dimen/inter_space"
            tools:text="24"
            android:textColor="@color/colorClubItemTitle" />
    </LinearLayout>

    <View style="@style/horizontal_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/inter_space"
        android:paddingTop="@dimen/inter_space">

        <LinearLayout
            android:id="@+id/order_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/bg_white_pressed">

            <TextView
                style="@style/order_detail_fragment_name_type"
                android:text="@string/untreated_orders" />

            <TextView
                android:id="@+id/untreatedOrders"
                style="@style/order_detail_fragment_content_type"
                android:textColor="@color/colorBtnSelector"
                tools:text="saa" />
        </LinearLayout>

        <View style="@style/line_vertical" />

        <LinearLayout
            android:id="@+id/order_refused"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/bg_white_pressed">

            <TextView
                style="@style/order_detail_fragment_name_type"
                android:text="@string/refused_orders" />

            <TextView
                android:id="@+id/refusedOrders"
                style="@style/order_detail_fragment_content_type"
                tools:text="saa" />
        </LinearLayout>

        <View style="@style/line_vertical" />

        <LinearLayout
            android:id="@+id/order_over_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/bg_white_pressed">

            <TextView
                style="@style/order_detail_fragment_name_type"
                android:text="@string/overtime_orders" />

            <TextView
                android:id="@+id/overtimeOrders"
                style="@style/order_detail_fragment_content_type"
                tools:text="saa" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/horizontal_line" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FAFAFA"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/inter_space"
            android:layout_height="@dimen/inter_space"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/inter_space"
            android:background="@drawable/order_detail_had_accept" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/small_space"
            android:paddingLeft="@dimen/margin_10"
            android:paddingTop="@dimen/small_space"
            android:text="@string/had_accept_orders_total"
            android:textColor="@color/colorClubItemTitle" />

        <TextView
            android:id="@+id/had_accept_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="@dimen/inter_space"
            tools:text="24"
            android:textColor="@color/colorClubItemTitle" />
    </LinearLayout>

    <View style="@style/horizontal_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/inter_space"
        android:paddingTop="@dimen/inter_space">

        <LinearLayout
            android:id="@+id/order_accept"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_white_pressed"
            android:orientation="vertical">

            <TextView
                style="@style/order_detail_fragment_name_type"
                android:text="@string/accept_orders" />

            <TextView
                android:id="@+id/acceptOrders"
                style="@style/order_detail_fragment_content_type"
                android:textColor="@color/colorBtnSelector"
                tools:text="saa" />
        </LinearLayout>

        <View style="@style/line_vertical" />

        <LinearLayout
            android:id="@+id/order_complete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/bg_white_pressed">

            <TextView
                style="@style/order_detail_fragment_name_type"
                android:text="@string/completed_orders" />

            <TextView
                android:id="@+id/completedOrders"
                style="@style/order_detail_fragment_content_type"
                tools:text="saa" />
        </LinearLayout>

        <View style="@style/line_vertical" />

        <LinearLayout
            android:id="@+id/order_failure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/bg_white_pressed">

            <TextView
                style="@style/order_detail_fragment_name_type"
                android:text="@string/nullity_orders" />

            <TextView
                android:id="@+id/nullityOrders"
                style="@style/order_detail_fragment_content_type"
                tools:text="saa" />
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/horizontal_line"
        android:background="#E0E0E0" />

</LinearLayout>