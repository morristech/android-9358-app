<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fafafa"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_little_margin"
    android:paddingLeft="@dimen/activity_little_margin"
    android:paddingRight="@dimen/activity_small_margin"
    android:paddingTop="@dimen/activity_little_margin">

    <TextView
        android:id="@+id/tv_start_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@drawable/shape_round_corner_bg"
        android:gravity="center"
        android:padding="@dimen/activity_small_margin"
        android:textColor="@color/colorText"
        android:textSize="@dimen/fontSubheading" />

    <View
        android:layout_width="@dimen/activity_horizontal_margin"
        android:layout_height="1dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/activity_little_margin"
        android:background="@color/colorStoke" />

    <TextView
        android:id="@+id/tv_end_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@drawable/shape_round_corner_bg"
        android:gravity="center"
        android:padding="@dimen/activity_small_margin"
        android:textColor="@color/colorText"
        android:textSize="@dimen/fontSubheading" />

    <Button
        android:id="@+id/btn_confirm_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_normal_margin"
        android:layout_weight="1"
        android:gravity="center"
        android:text="确定"
        android:textSize="@dimen/large_text_size" />
</LinearLayout>