<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.xmd.manager.widget.FlowLayout
                android:id="@+id/selected_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/inter_space"
                android:layout_marginTop="@dimen/margin_10" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/add_group" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/inter_space"
                android:text="@string/all_group_add" />

            <com.xmd.manager.widget.FlowLayout
                android:id="@+id/all_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/inter_space" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>