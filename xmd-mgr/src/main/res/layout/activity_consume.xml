<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:id="@+id/coupon_content_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_qrcode_consume"
            android:layout_width="match_parent"
            android:layout_height="@dimen/consume_activity_cardview_height"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:elevation="@dimen/card_elevation">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/inter_space">

                <ImageView
                    android:id="@+id/qrcode"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/coupon_qrcode" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/inter_space"
                    android:layout_toRightOf="@id/qrcode"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/consume_activity_qrcode_consume_title"
                        android:textSize="@dimen/consume_activity_item_title_text_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/consume_activity_qrcode_consume_sub_title"
                        android:textSize="@dimen/consume_activity_item_sub_title_text_size" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/arrow_right" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/inter_space"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:elevation="@dimen/card_elevation">

            <!--Phone number insert edittext and confirm button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_manually_consume"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/consume_activity_cardview_height"
                    android:clickable="true"
                    android:padding="@dimen/inter_space">

                    <ImageView
                        android:id="@+id/manual"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/coupon_manually" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/inter_space"
                        android:layout_toRightOf="@id/manual"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/consume_activity_manually_consume_title"
                            android:textSize="@dimen/consume_activity_item_title_text_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/consume_activity_manually_consume_sub_title"
                            android:textSize="@dimen/consume_activity_item_sub_title_text_size" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/manual_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />

                </RelativeLayout>


                <com.xmd.manager.widget.ClearableEditText
                    android:id="@+id/coupon_consume_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/consume_activity_component_space"
                    android:hint="@string/consume_activity_phone_input_hint"
                    android:inputType="text"
                    android:maxLength="12"
                    android:paddingLeft="@dimen/small_margin"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_color_hint"
                    android:textSize="@dimen/consume_activity_customer_phone_text_size"
                    app:bg_color_filter="@color/primary_color" />

                <Button
                    android:id="@+id/btn_manually_consume"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/consume_activity_component_space"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/consume_activity_component_space"
                    android:text="@string/consume_activity_coupon_consume"
                    android:textColor="@color/white" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:padding="@dimen/small_space"
            android:layout_width="match_parent"
            android:layout_height="@dimen/consume_activity_coupon_title_bar_height"
            android:layout_marginTop="@dimen/inter_space"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="@string/consume_activity_coupon_list_title"
                android:textSize="@dimen/consume_activity_coupon_desc_text_size" />

            <TextView
                android:id="@+id/tv_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_toLeftOf="@+id/iv_refresh"
                android:layout_marginRight="@dimen/small_space"
                android:text="@string/consume_refresh"
                android:textSize="@dimen/consume_activity_coupon_desc_text_size" />

            <ImageButton
                android:id="@+id/iv_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/refresh"
                android:layout_marginRight="@dimen/inter_space"
                android:background="@color/transparent"
                android:scaleType="center"
                android:layout_centerVertical="true"
                android:gravity="center" />

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/coupon_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/inter_space" />

        <com.xmd.manager.widget.EmptyView
            android:id="@+id/coupon_empty_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>