<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_bg"
              android:orientation="vertical">
    <include layout="@layout/toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/inter_space"
            android:paddingRight="@dimen/inter_space"
            android:paddingTop="9dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择时间"
                android:textColor="#666666"
                android:textSize="@dimen/inter_text_size"/>
            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="horizontal"
                android:padding="@dimen/small_space">
                <RadioButton
                    android:id="@+id/btn_all_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@null"
                    android:button="@null"
                    android:checked="true"
                    android:drawableLeft="@drawable/radio_button_style_selector"
                    android:drawablePadding="@dimen/margin_10"
                    android:text="全部"
                    android:textColor="@color/radio_button_text_color_selector"
                    android:textSize="@dimen/fontBody"/>

                <RadioButton
                    android:id="@+id/btn_receive_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:background="@null"
                    android:button="@null"
                    android:drawableLeft="@drawable/radio_button_style_selector"
                    android:drawablePadding="@dimen/margin_10"
                    android:text="领券时间"
                    android:textColor="@color/radio_button_text_color_selector"
                    android:textSize="@dimen/fontBody"/>
                <RadioButton
                    android:id="@+id/btn_verification_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:background="@null"
                    android:button="@null"
                    android:drawableLeft="@drawable/radio_button_style_selector"
                    android:drawablePadding="@dimen/margin_10"
                    android:text="核销时间"
                    android:textColor="@color/radio_button_text_color_selector"
                    android:textSize="@dimen/fontBody"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_filter_time_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_filter_time_all_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/small_space"
                android:paddingLeft="40dp"
                android:paddingTop="@dimen/small_space"
                android:textColor="#4a4a4a"
                android:textSize="@dimen/fontBody"
                tools:text="2017.02.03"/>
            <View android:layout_width="8dp"
                  android:layout_height="1dp"
                  android:layout_gravity="center_vertical"
                  android:layout_marginLeft="15dp"
                  android:layout_marginRight="15dp"
                  android:background="#666666"/>
            <TextView
                android:id="@+id/tv_filter_time_all_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingBottom="@dimen/small_space"
                android:paddingTop="@dimen/small_space"
                android:textColor="#4a4a4a"
                android:textSize="@dimen/fontBody"
                tools:text="2017.09.09"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_user_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="40dp"
            android:orientation="horizontal"
            android:paddingLeft="40dp"
            android:paddingRight="20dp"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_user_start_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_white_with_border"
                android:drawableLeft="@drawable/icon_calendar"
                android:drawablePadding="15dp"
                android:paddingBottom="@dimen/small_space"
                android:paddingLeft="10dp"
                android:paddingTop="@dimen/small_space"
                android:textColor="#4a4a4a"
                android:textSize="@dimen/fontBody"
                tools:text="2017-09-06"/>
            <TextView
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/small_space"
                android:layout_marginRight="@dimen/small_space"
                android:background="#e0e0e0"/>
            <TextView
                android:id="@+id/tv_user_end_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_white_with_border"
                android:drawableLeft="@drawable/icon_calendar"
                android:drawablePadding="15dp"
                android:paddingBottom="@dimen/small_space"
                android:paddingLeft="10dp"
                android:paddingTop="@dimen/small_space"
                android:textColor="#4a4a4a"
                android:textSize="@dimen/fontBody"
                tools:text="2017-09-06"/>

        </LinearLayout>

    </LinearLayout>
    <View style="@style/horizontal_line"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/white"
                  android:orientation="vertical"
                  android:paddingBottom="@dimen/small_space"
                  android:paddingLeft="@dimen/inter_space"
                  android:paddingRight="@dimen/inter_space">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingBottom="9dp"
                  android:paddingTop="9dp"
                  android:text="当前状态"
                  android:textColor="#666666"
                  android:textSize="@dimen/inter_text_size"/>
        <RadioGroup
            android:id="@+id/radio_group_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_coupon_all"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/checked_coupon_type_filter_bg"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:paddingBottom="@dimen/small_space"
                android:paddingTop="@dimen/small_space"
                android:text="全部"
                android:textColor="@color/radio_button_text_color_selector"/>
            <RadioButton
                android:id="@+id/rb_coupon_usable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/inter_space"
                android:layout_weight="1"
                android:background="@drawable/checked_coupon_type_filter_bg"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="@dimen/small_space"
                android:paddingTop="@dimen/small_space"
                android:text="可用"
                android:textColor="@color/radio_button_text_color_selector"/>
            <RadioButton
                android:id="@+id/rb_coupon_used"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/inter_space"
                android:layout_weight="1"
                android:background="@drawable/checked_coupon_type_filter_bg"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="@dimen/small_space"
                android:paddingTop="@dimen/small_space"
                android:text="已核销"
                android:textColor="@color/radio_button_text_color_selector"/>
            <RadioButton
                android:id="@+id/rb_coupon_overtime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/inter_space"
                android:layout_weight="1"
                android:background="@drawable/checked_coupon_type_filter_bg"
                android:button="@null"
                android:gravity="center"
                android:paddingBottom="@dimen/small_space"
                android:paddingTop="@dimen/small_space"
                android:text="已过期"
                android:textColor="@color/radio_button_text_color_selector"/>

        </RadioGroup>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fm_coupon_select"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
    />
    <View style="@style/horizontal_divider_line"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/white"
                  android:orientation="vertical"
                  android:paddingBottom="@dimen/small_space"
                  android:paddingLeft="20dp"
                  android:paddingRight="20dp"
                  android:paddingTop="@dimen/small_space">
        <Button
            android:id="@+id/btn_filter_coupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_selector"
            android:gravity="center"
            android:padding="8dp"
            android:text="确认"
            android:textColor="@color/white"/>
    </LinearLayout>

</LinearLayout>