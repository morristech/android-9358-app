<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_bg"
              android:orientation="vertical"
              android:padding="@dimen/inter_space">


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/bg_white_top_radius"
                  android:orientation="horizontal"
                  android:paddingBottom="@dimen/small_space">

        <LinearLayout android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:padding="@dimen/small_space">
                <TextView
                    android:id="@+id/coupon_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    tools:text="123券"/>

                <TextView
                    android:id="@+id/coupon_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:textColor="#616161"
                    android:textSize="12sp"
                    tools:text="(现金券)"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:padding="@dimen/small_space">
                <TextView
                    android:id="@+id/tv_money_mark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"

                    android:text="￥"
                    android:textSize="14sp"
                    android:gravity="left|bottom"
                    android:textColor="#999999"
                    />
                <TextView
                    android:id="@+id/tv_coupon_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:textColor="#999999"
                    android:textSize="21sp"
                    tools:text="123券"
                    android:layout_marginLeft="2dp"
                />

                <TextView
                    android:id="@+id/tv_coupon_use_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="8dp"
                    android:textColor="#616161"
                    android:textSize="12sp"
                    tools:text="2元抵20"/>
            </LinearLayout>

        </LinearLayout>


        <ImageView
            android:id="@+id/img_coupon_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:src="@drawable/icon_mark_usable"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/shape_split_line"
        android:layerType="software"/>
    <TextView
        android:id="@+id/coupon_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawableLeft="@drawable/icon_coupon_number"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/small_space"
        android:paddingLeft="8dp"
        android:paddingTop="@dimen/small_space"
        android:text="22151255225515"/>
    <View
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_gravity="bottom"
        android:background="@drawable/coupon_delivery_bottom_bg"
    />


</LinearLayout>