<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/customer_groups"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_10"
    android:layout_marginBottom="@dimen/margin_10"
    android:background="@color/colorTimeBg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/group_tag_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginLeft="@dimen/inter_space"
        android:layout_marginRight="@dimen/inter_space"
        android:textColor="@color/colorFont2"
        android:textSize="@dimen/small_text_size"
        android:hint="推荐分类"
        android:textColorHint="@color/colorFont2"
        android:visibility="gone"/>

    <com.xmd.manager.widget.FlowLayout
        android:id="@+id/customer_group_child_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
