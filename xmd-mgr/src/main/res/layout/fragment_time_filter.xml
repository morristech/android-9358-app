<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#f9f9f9"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_time_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="45dp"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:visibility="visible">
        <RelativeLayout
            android:id="@+id/rl_time_reduce"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center|right"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_left"/>

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_time_by_day_or_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_time_day_or_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_round_corner_bg"
                android:gravity="center"
                android:padding="6dp"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/fontCaption"
                tools:text="2017-08"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_time_by_week"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:visibility="visible">
            <TextView
                android:id="@+id/tv_time_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_round_corner_bg"
                android:gravity="center"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/fontCaption"
                tools:text="2017-08-16 -- 2017-16-45"/>
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rl_time_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="left"
            android:padding="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_right"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_time_customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="45dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/shape_bg_white_with_stoke"
            android:gravity="center"
            android:hint="开始时间"
            android:lines="1"
            android:padding="6dp"
            android:textColor="@color/colorTitle"
            android:textColorHint="#66666666"
            android:textSize="@dimen/fontCaption"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:gravity="center_vertical"
            android:text="-"
            android:textColor="#66666666"
            android:textSize="@dimen/x_large_text_size"/>

        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/shape_bg_white_with_stoke"
            android:gravity="center"
            android:hint="结束时间"
            android:lines="1"
            android:padding="6dp"
            android:textColor="@color/colorTitle"
            android:textColorHint="#66666666"
            android:textSize="@dimen/fontCaption"/>

        <Button
            android:id="@+id/btn_time_search"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="@dimen/cousume_activity_coupon_margin_left"
            android:layout_marginTop="4dp"
            android:background="@drawable/btn_selector"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/x_large_text_size"/>
    </LinearLayout>

</LinearLayout>