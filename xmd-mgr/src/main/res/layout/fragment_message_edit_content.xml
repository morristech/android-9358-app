<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10"
        android:paddingTop="@dimen/margin_10">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/send_step_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_done_step"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/colorHead"
                android:textSize="@dimen/inter_text_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_2"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/send_step_first"
                android:background="@color/app_bg" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_2"
                android:layout_centerVertical="true"
                android:background="@color/app_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_done_step"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/colorHead"
                android:textSize="@dimen/inter_text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_2"
                android:layout_centerVertical="true"
                android:background="@color/app_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_doing_step"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/colorHead"
                android:textSize="@dimen/inter_text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/send_step_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_todo_step"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/colorBody"
                android:textSize="@dimen/fontRemark" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_2"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/send_step_four"
                android:background="@color/app_bg" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/select_time_padding"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10"
        android:paddingTop="@dimen/small_space">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/select_customer"
            android:textColor="@color/colorRemark"
            android:textSize="@dimen/fontMiddle" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/select_activity"
            android:textColor="@color/colorRemark"
            android:textSize="@dimen/fontMiddle" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/edit_content"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/inter_text_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/message_confirm"
            android:textColor="@color/colorRemark"
            android:textSize="@dimen/fontMiddle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/inter_space"
        android:layout_marginRight="@dimen/inter_space"
        android:layout_marginTop="@dimen/select_time_padding"
        android:paddingLeft="@dimen/inter_space"
        android:paddingRight="@dimen/inter_space"
        android:paddingTop="@dimen/select_time_padding"
        android:paddingBottom="@dimen/margin_10"
        android:background="@color/tab_bg"
        android:orientation="horizontal">

        <View
            android:id="@+id/v_line"
            android:layout_width="2dp"
            android:layout_height="@dimen/middle_space"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@color/colorChartLine" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="添加图片"
            android:textColor="@color/colorFont1"
            android:textSize="@dimen/large_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/inter_space"
        android:layout_marginRight="@dimen/inter_space"
        android:background="@color/tab_bg"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginLeft="@dimen/inter_space">

            <com.xmd.manager.widget.CircularBeadImageView
                android:id="@+id/group_add_pic"
                android:layout_width="@dimen/select_image_width"
                android:layout_height="@dimen/select_image_width"
                android:layout_marginRight="@dimen/small_space"
                android:layout_marginTop="@dimen/small_space"
                android:padding="@dimen/small_space"
                android:src="@drawable/img_group_add_img"
                app:border_radius="2dp"
                app:type="1" />

            <ImageView
                android:id="@+id/image_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/ic_delete"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:id="@+id/limit_image_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_10"
            tools:text="上传图片需小于M"
            android:textColor="@color/empty_view_textview_color"
            android:textSize="@dimen/inter_text_size" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/inter_space"
        android:layout_marginRight="@dimen/inter_space"
        android:layout_marginTop="@dimen/select_time_padding"
        android:paddingLeft="@dimen/inter_space"
        android:paddingRight="@dimen/inter_space"
        android:paddingTop="@dimen/select_time_padding"
        android:background="@color/tab_bg"
        android:orientation="horizontal">

        <View
            android:layout_width="2dp"
            android:layout_height="@dimen/middle_space"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_10"
            android:background="@color/colorChartLine" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/edit_message"
            android:textColor="@color/colorFont1"
            android:textSize="@dimen/large_text_size" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pay_money_height"
        android:layout_marginLeft="@dimen/inter_space"
        android:layout_marginRight="@dimen/inter_space"
        android:paddingLeft="@dimen/inter_space"
        android:paddingRight="@dimen/inter_space"
        android:paddingBottom="@dimen/inter_space"
        android:paddingTop="@dimen/select_time_padding"
        android:background="@color/tab_bg">

        <EditText
            android:id="@+id/edit_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_white_with_border"
            android:gravity="top|left"
            android:maxLength="100"
            android:padding="@dimen/small_space"
            android:textSize="@dimen/fontBody" />

        <TextView
            android:id="@+id/editable_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:paddingBottom="@dimen/small_space"
            android:paddingRight="@dimen/inter_space"
            android:text="@string/text_100" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/inter_space"
            android:paddingRight="@dimen/inter_space"
            android:paddingBottom="@dimen/small_space"
            android:paddingTop="@dimen/small_space"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/btn_previous_step"
                android:layout_width="0dp"
                android:layout_height="@dimen/login_activity_login_button_magin_top"
                android:layout_weight="1"
                android:background="@drawable/select_btn_reset_bg"
                android:gravity="center"
                android:text="@string/previous_step"
                android:textColor="@color/colorBtnSelector"
                android:textSize="@dimen/fontSubheading" />

            <Button
                android:id="@+id/btn_preview"
                android:layout_width="0dp"
                android:layout_height="@dimen/login_activity_login_button_magin_top"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_weight="1"
                android:background="@drawable/select_btn_send_bg"
                android:gravity="center"
                android:text="@string/preview"
                android:textColor="@color/white"
                android:textSize="@dimen/fontSubheading" />

        </LinearLayout>

        <View
            style="@style/line"
            android:layout_above="@+id/button_container" />

    </RelativeLayout>
</LinearLayout>