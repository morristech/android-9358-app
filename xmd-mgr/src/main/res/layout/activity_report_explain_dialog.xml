<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_white_radius"
        android:orientation="vertical"
        app:layout_heightPercent="55%"
        app:layout_widthPercent="80%">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/activity_normal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="@dimen/activity_small_margin"
                android:text="提示"
                android:textColor="@color/colorText"
                android:textSize="@dimen/x_large_text_size" />

            <ImageView
                android:id="@+id/img_dialog_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/activity_small_margin"
                android:src="@drawable/ic_close" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorDivide" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/tv_explain_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:textSize="@dimen/inter_text_size" />

            <TextView
                android:id="@+id/tv_explain_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_normal_margin"
                android:drawableLeft="@drawable/ic_explain"
                android:drawablePadding="@dimen/activity_little_margin"
                android:textColor="@color/colorText3"
                android:textSize="@dimen/inter_text_size"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_explain_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_normal_margin"
                android:drawableLeft="@drawable/ic_explain"
                android:drawablePadding="@dimen/activity_little_margin"
                android:textColor="@color/colorText3"
                android:textSize="@dimen/inter_text_size"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_explain_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_normal_margin"
                android:drawableLeft="@drawable/ic_explain"
                android:drawablePadding="@dimen/activity_little_margin"
                android:textColor="@color/colorText3"
                android:textSize="@dimen/inter_text_size"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorDivide" />

        <Button
            android:id="@+id/btn_dialog_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_normal_margin"
            android:text="确认"
            android:textSize="@dimen/x_large_text_size" />
    </LinearLayout>
</android.support.percent.PercentRelativeLayout>
