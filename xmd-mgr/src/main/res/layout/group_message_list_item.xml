<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/inter_space"
    android:layout_marginRight="@dimen/inter_space"
    android:layout_marginTop="@dimen/margin_10"
    android:clickable="false"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/list_item_card_corner_radius"
    app:cardPreventCornerOverlap="false"
    app:elevation="@dimen/list_item_card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_club_list_item_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/large_space">

        <LinearLayout
            android:id="@+id/ll_group_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/inter_space"
            android:layout_marginRight="@dimen/inter_space"
            android:layout_marginTop="@dimen/large_space"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/group_coupon_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                tools:text="店庆10周年，现为你免费送上价值200元的大堂按摩券一张"
                android:textColor="@color/colorClubItemTitle"
                android:textSize="@dimen/fontSelectGroup" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_coupon_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/inter_space"
            android:layout_marginRight="@dimen/inter_space"
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/group_coupon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGroupNameText"
                android:textSize="@dimen/fontBig" />

        </LinearLayout>

        <ImageView
            android:id="@+id/group_send_image"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginLeft="@dimen/inter_space"
            android:src="@drawable/img_group_default"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/inter_space"
            android:layout_marginRight="@dimen/inter_space"
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send_group_total_amount"
                android:textColor="@color/colorRemark"
                android:textSize="@dimen/fontBody" />

            <TextView
                android:id="@+id/group_send_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_space"
                android:singleLine="true"
                android:textColor="@color/colorRemark"
                android:textSize="@dimen/fontBody" />

            <LinearLayout
                android:id="@+id/ll_verification"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/customer_comment_margin_left"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/send_group_use_amount"
                    android:textColor="@color/colorRemark"
                    android:textSize="@dimen/fontBody" />

                <TextView
                    android:id="@+id/group_verification_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/small_space"
                    android:singleLine="true"
                    android:textColor="@color/colorRemark"
                    android:textSize="@dimen/fontBody" />
            </LinearLayout>

        </LinearLayout>

        <View
            style="@style/line"
            android:layout_marginTop="@dimen/inter_space" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/inter_space"
            android:layout_marginRight="@dimen/inter_space"
            android:layout_marginTop="@dimen/margin_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/group_send_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_time"
                android:drawablePadding="@dimen/inter_space"
                android:textColor="@color/colorRemark"
                android:textSize="@dimen/fontBody" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
