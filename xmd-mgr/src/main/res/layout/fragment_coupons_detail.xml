<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_activity_drawer_title_height"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/horizontal_avg_layout"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/statistics_fragment_propagate" />

            <TextView
                android:id="@+id/tv_propagate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/coupons_margin_top"
                android:text="0" />

        </LinearLayout>

        <View style="@style/tab_vertical_line" />

        <LinearLayout
            style="@style/horizontal_avg_layout"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coupons_delivery" />

            <TextView
                android:id="@+id/tv_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/coupons_margin_top"
                android:text="0" />

        </LinearLayout>

        <View style="@style/tab_vertical_line" />

        <LinearLayout
            style="@style/horizontal_avg_layout"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/statistics_fragment_share" />

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/coupons_margin_top"
                android:text="0" />

        </LinearLayout>

        <View style="@style/tab_vertical_line" />

        <LinearLayout
            style="@style/horizontal_avg_layout"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/statistics_fragment_to_club" />

            <TextView
                android:id="@+id/tv_to_club"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/coupons_margin_top"
                android:text="0" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>