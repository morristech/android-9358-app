<?xml version="1.0" encoding="utf-8"?>
<com.xmd.manager.journal.widget.CustomCombineImageView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/img_add_image"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_replace"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_gravity="bottom"
            android:background="#50000000"
            android:gravity="center"
            android:text="替换"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end"
            android:scaleType="center"
            android:src="@drawable/icon_delete2" />

        <TextView
            android:id="@+id/tv_upload"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:gravity="center"
            android:text="等待上传"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/tv_upload_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/icon_ok" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:maxLines="2"
        android:text="杨美丽[8005]" />
</com.xmd.manager.journal.widget.CustomCombineImageView>