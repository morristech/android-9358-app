<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_item_clicked"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/inter_space"
        android:background="@color/customer_list_item_header_background_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/small_space"
        android:paddingLeft="@dimen/inter_space"
        android:paddingRight="@dimen/inter_space"
        android:paddingTop="@dimen/small_space">

        <TextView
            android:id="@+id/tv_customer_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="@color/colorClubItemTitle"
            android:textSize="@dimen/h_large_text_size"

            tools:text="name" />

        <TextView
            android:id="@+id/tv_customer_type"
            android:layout_width="@dimen/customer_type_label_width"
            android:layout_height="@dimen/customer_type_label_height"
            android:layout_marginLeft="@dimen/small_space"
            android:layout_marginTop="-3dp"
            android:background="@drawable/customer_type_weixin"
            android:gravity="center"
            android:textColor="@color/customer_type_label_weixin"
            android:textSize="@dimen/tiny_text_size"
            tools:text="微信" />

        <TextView
            android:id="@+id/tv_bad_comments_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/small_space"
            android:layout_marginTop="@dimen/tiny_space"
            android:textColor="@color/colorClubItemBody"
            android:textSize="@dimen/fontMiddle"
            tools:text="差评4" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/small_space"
        android:layout_marginLeft="@dimen/inter_space"
        android:layout_marginRight="@dimen/inter_space"
        android:layout_marginTop="@dimen/small_space">

        <TextView
            android:id="@+id/tv_telephone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:textColor="@color/colorBody"
            android:textSize="@dimen/fontMiddle"
            tools:text="13265684473" />

        <!--        <TextView
                    android:id="@+id/tv_duration_from_last_visit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/customer_list_item_right_text_color"
                    android:textSize="@dimen/fontRemark"
                    android:layout_alignParentRight="true"
                    tools:text="1天前"/>-->

    </RelativeLayout>

</LinearLayout>