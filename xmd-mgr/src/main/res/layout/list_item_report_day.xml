<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_bg_white"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/tv_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:drawableLeft="@drawable/shape_gray_dot"
        android:drawablePadding="@dimen/activity_normal_margin"
        android:textColor="@color/colorText"
        android:textSize="@dimen/large_text_size" />

    <TextView
        android:id="@+id/tv_item_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorText"
        android:drawablePadding="@dimen/small_padding"
        android:drawableRight="@drawable/icon_right_allow"
        android:textSize="@dimen/large_text_size" />
</RelativeLayout>