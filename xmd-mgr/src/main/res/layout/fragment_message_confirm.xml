<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10"
        android:paddingTop="@dimen/margin_10">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/send_step_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_done_step"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/colorHead"
                android:textSize="@dimen/inter_text_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_2"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/send_step_first"
                android:background="@color/app_bg" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_2"
                android:layout_centerVertical="true"
                android:background="@color/app_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_done_step"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/colorHead"
                android:textSize="@dimen/inter_text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_2"
                android:layout_centerVertical="true"
                android:background="@color/app_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_done_step"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/colorHead"
                android:textSize="@dimen/inter_text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/send_step_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_doing_step"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/colorHead"
                android:textSize="@dimen/inter_text_size" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_2"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/send_step_four"
                android:background="@color/app_bg" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/select_time_padding"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10"
        android:paddingTop="@dimen/small_space">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/select_customer"
            android:textColor="@color/colorRemark"
            android:textSize="@dimen/fontMiddle" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/select_activity"
            android:textColor="@color/colorRemark"
            android:textSize="@dimen/fontMiddle" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/edit_content"
            android:textColor="@color/colorRemark"
            android:textSize="@dimen/fontMiddle" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/message_confirm"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/inter_text_size" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/inter_space"
            android:paddingBottom="@dimen/small_space"
            android:paddingTop="@dimen/small_space"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/btn_previous_step"
                android:layout_width="0dp"
                android:layout_height="@dimen/login_activity_login_button_magin_top"
                android:layout_weight="1"
                android:background="@drawable/select_btn_reset_bg"
                android:gravity="center"
                android:text="@string/previous_step"
                android:textColor="@color/colorBtnSelector"
                android:textSize="@dimen/fontSubheading" />

            <Button
                android:id="@+id/btn_send"
                android:layout_width="0dp"
                android:layout_height="@dimen/login_activity_login_button_magin_top"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_weight="1"
                android:background="@drawable/select_btn_send_bg"
                android:gravity="center"
                android:text="@string/btn_send"
                android:textColor="@color/white"
                android:textSize="@dimen/fontSubheading" />

        </LinearLayout>

        <TextView
            android:id="@+id/send_confirm_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_10"
            android:layout_above="@+id/button_container"
            android:background="@color/colorCustomerCountBg"
            android:drawableLeft="@drawable/dot_emojicon_unselected"
            android:drawablePadding="@dimen/margin_10"
            android:text="消息确认无误之后，点击发送进行群发"
            android:textSize="@dimen/inter_text_size"
            android:textColor="@color/colorChartLine" />

        <View
            style="@style/line"
            android:layout_above="@+id/button_container" />

        <View
            style="@style/line"
            android:layout_above="@id/send_confirm_hint" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_above="@id/send_confirm_hint"
            android:id="@+id/view">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/inter_space"
                    android:layout_marginRight="@dimen/inter_space"
                    android:layout_marginTop="@dimen/inter_space"
                    android:paddingLeft="@dimen/inter_space"
                    android:paddingRight="@dimen/inter_space"
                    android:paddingTop="@dimen/select_time_padding"
                    android:background="@color/tab_bg"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="2dp"
                        android:layout_height="@dimen/middle_space"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/margin_10"
                        android:background="@color/colorChartLine" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/margin_10"
                        android:text="目标客户"
                        android:textColor="@color/colorFont1"
                        android:textSize="@dimen/large_text_size" />

                    <TextView
                        android:id="@+id/customer_count_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        tools:text="(80个)"
                        android:textColor="@color/colorFont1"
                        android:textSize="@dimen/large_text_size" />
                </LinearLayout>

                <TextView
                    android:id="@+id/customer_group_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/inter_space"
                    android:layout_marginRight="@dimen/inter_space"
                    android:paddingLeft="@dimen/inter_space"
                    android:paddingRight="@dimen/inter_space"
                    android:paddingTop="@dimen/select_time_padding"
                    android:paddingBottom="@dimen/select_time_padding"
                    android:background="@color/tab_bg"
                    tools:text="(80个)"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/inter_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/inter_space"
                    android:layout_marginRight="@dimen/inter_space"
                    android:layout_marginTop="@dimen/inter_space"
                    android:paddingLeft="@dimen/inter_space"
                    android:paddingRight="@dimen/inter_space"
                    android:paddingTop="@dimen/select_time_padding"
                    android:background="@color/tab_bg"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="2dp"
                        android:layout_height="@dimen/middle_space"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/margin_10"
                        android:background="@color/colorChartLine" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/margin_10"
                        android:text="@string/send_activity"
                        android:textColor="@color/colorFont1"
                        android:textSize="@dimen/large_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/detail_activity_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/inter_space"
                    android:layout_marginRight="@dimen/inter_space"
                    android:paddingLeft="@dimen/inter_space"
                    android:paddingRight="@dimen/inter_space"
                    android:paddingTop="@dimen/select_time_padding"
                    android:paddingBottom="@dimen/select_time_padding"
                    android:background="@color/tab_bg"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/group_activity_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/middle_space"
                        android:background="@drawable/kuohao"
                        tools:text="自定义分组"
                        android:textColor="@color/colorChartLine"
                        android:textSize="@dimen/inter_text_size" />

                    <TextView
                        android:id="@+id/group_activity_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="80人"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/inter_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/inter_space"
                    android:layout_marginRight="@dimen/inter_space"
                    android:layout_marginTop="@dimen/inter_space"
                    android:paddingLeft="@dimen/inter_space"
                    android:paddingRight="@dimen/inter_space"
                    android:paddingTop="@dimen/select_time_padding"
                    android:background="@color/tab_bg"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="2dp"
                        android:layout_height="@dimen/middle_space"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/margin_10"
                        android:background="@color/colorChartLine" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/margin_10"
                        android:text="消息内容"
                        android:textColor="@color/colorFont1"
                        android:textSize="@dimen/large_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/inter_space"
                    android:layout_marginRight="@dimen/inter_space"
                    android:paddingLeft="@dimen/inter_space"
                    android:paddingRight="@dimen/inter_space"
                    android:paddingTop="@dimen/select_time_padding"
                    android:paddingBottom="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/group_list_margin"
                    android:background="@color/tab_bg"
                    android:orientation="vertical">

                    <com.xmd.manager.widget.CircularBeadImageView
                        android:id="@+id/group_pic"
                        android:layout_width="@dimen/select_image_width"
                        android:layout_height="@dimen/select_image_width"
                        android:layout_marginRight="@dimen/small_space"
                        android:layout_marginTop="@dimen/small_space"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:padding="@dimen/small_space"
                        android:src="@drawable/img_group_add_img"
                        app:border_radius="2dp"
                        app:type="1" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@drawable/dash_line_bg"
                        android:layerType="software"/>

                    <TextView
                        android:id="@+id/group_detail_message_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:lineSpacingExtra="@dimen/small_space"
                        tools:text="dj弱"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/inter_text_size" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </RelativeLayout>

</LinearLayout>