<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="@dimen/button_radius" />
            <stroke android:width="@dimen/line_width" android:color="@color/colorBtnChecked" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="@dimen/button_radius" />
            <stroke android:width="@dimen/line_width" android:color="@color/colorBtnSelector" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="@dimen/button_radius" />
            <stroke android:width="@dimen/list_item_card_elevation" android:color="@color/colorBody" />
        </shape>
    </item>
</selector>