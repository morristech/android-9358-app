<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/small_space" android:topLeftRadius="@dimen/small_space" />
            <solid android:color="@color/colorBtnSelector" />
            <stroke android:width="1dp" android:color="@color/colorBtnSelector" />
        </shape>
    </item>

    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/small_space" android:topLeftRadius="@dimen/small_space" />
            <solid android:color="@color/white" />
            <stroke android:width="1dp" android:color="@color/colorBtnSelector" />
        </shape>
    </item>

</selector>