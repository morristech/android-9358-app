<resources>

    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_left_in</item>
        <item name="android:windowExitAnimation">@anim/slide_left_out</item>
    </style>

    <style name="anim_bottom_to_top_style">
        <item name="android:windowEnterAnimation">@anim/slide_bottom_top_alpha_in</item>
        <item name="android:windowExitAnimation">@anim/slide_top_bottom_alpha_out</item>
    </style>

    <style name="anim_top_to_bottom_style">
        <item name="android:windowEnterAnimation">@anim/slide_top_bottom_alpha_in</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom_top_alpha_out</item>
    </style>

    <style name="anim_style_scale_out">
        <item name="android:windowEnterAnimation">@anim/scale_alpha_in</item>
        <item name="android:windowExitAnimation">@anim/scale_alpha_out</item>
    </style>

    <!-- Custom Alert Dialog -->
    <style name="custom_alert_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="dialog_button_style" parent="Widget.AppCompat.Button">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/zero</item>
        <item name="android:textSize">@dimen/dialog_button_text_size</item>
    </style>

    <style name="dialog_negative_button" parent="dialog_button_style">
        <item name="android:background">@drawable/selector_dialog_negative_button_bg</item>
        <item name="android:textColor">@color/selector_dialog_negative_button_text</item>
    </style>

    <style name="dialog_positive_button" parent="dialog_button_style">
        <item name="android:background">@drawable/selector_dialog_positive_button_bg</item>
        <item name="android:textColor">@color/selector_dialog_positive_button_text</item>
    </style>

    <style name="vertical_line">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="list_item_vertical_line" parent="vertical_line">
        <item name="android:background">@color/list_item_line_color</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="border_line" parent="line">
        <item name="android:background">@color/border_line_color</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="list_item_line" parent="line">
        <item name="android:background">@color/list_item_line_color</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="dialog_line" parent="line">
        <item name="android:background">@color/colorMain</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="dialog_gray_line" parent="line">
        <item name="android:background">@color/dialog_line_gray</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <!-- 设置该属性解决空白部分-->
    <style name="MyToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="tab_radio_button">
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/selector_tab_radio_button_bg</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/selector_tab_radio_button_text</item>
    </style>

    <style name="order_detail_section_layout" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/search_margin</item>
        <item name="android:background">@color/order_detail_section_bg_color</item>
    </style>

    <style name="order_detail_section_item_layout" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/order_detail_section_item_height</item>
        <item name="android:layout_marginLeft">@dimen/personal_margin</item>
    </style>

    <style name="order_detail_section_item_description_text_view" >
        <item name="android:layout_width">@dimen/order_detail_descriptoin_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/fontTitle</item>
        <item name="android:textColor">@color/colorBody</item>
        <item name="android:layout_marginRight">@dimen/large_space</item>
    </style>

    <style name="order_detail_section_item_value_text_view" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/fontTitle</item>
        <item name="android:textColor">@color/colorTitle</item>
    </style>

    <style name="paid_coupon_user_detail_header_text_view_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/inter_space</item>
        <item name="android:textColor">@color/dialog_content_text_color</item>
    </style>

    <!-- -->
    <style name="default_spinner_style" parent="android:Widget.Spinner">
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">@dimen/spinner_item_text_size</item>
    </style>

    <style name="popup_window_button_style" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/popup_window_button_min_width</item>
        <item name="android:background">@drawable/selector_popup_window_button_bg</item>
        <item name="android:textColor">@color/selector_popup_window_button_text</item>
    </style>
    <style name="top_menu_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/home_button_height</item>
        <item name="android:background">@color/title_Radio_button</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="horizontal_divider_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/colorRemarkText</item>
    </style>
    <style name="horizontal_divider_line_dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/colorRemarkText_dialog</item>
    </style>
    <style name="horizontal_divider_line_e0">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorRemarkText</item>
    </style>
    <style name="vertical_divider_line">
        <item name="android:layout_width">0.5dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider_thin_color</item>
    </style>

    <style name="horizontal_divider_line_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_thin_color</item>
    </style>
    <style name="user_center_rlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/personal_item_height</item>
        <item name="android:paddingLeft">@dimen/personal_padding</item>
        <item name="android:paddingRight">@dimen/personal_padding</item>
        <item name="android:background">@drawable/personal_item_selector</item>
    </style>
    <style name="user_center_imLeft">
        <item name="android:layout_width">@dimen/personal_item_icon_height</item>
        <item name="android:layout_height">@dimen/personal_item_icon_height</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    
    <style name="user_center_tvName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/search_view_height</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/colorBody</item>
        <item name="android:textSize">@dimen/fontTitle</item>
    </style>
    <style name="user_center_ivRight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/right_arrow</item>
    </style>
    <style name="user_center_tvRight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/personal_item_margin_right</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/colorBtnSelector</item>
        <item name="android:textSize">@dimen/fontBody</item>
    </style>
    <style name="text_bold">
        <item name="android:textSize">@dimen/fontHead</item>
    </style>
    <style name="text_normal">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/fontBody</item>
        <item name="android:gravity">center</item>


    </style>
    <style name="text_marked">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/fontSize</item>
        <item name="android:textColor">@color/colorMainBtn</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="text_credit">
        <item name="android:textSize">@dimen/fontBody</item>
        <item name="android:textColor">@color/colorHead</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="comment_message_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/comment_message_height</item>
        <item name="android:paddingRight">@dimen/padding_12</item>
        <item name="android:paddingLeft">@dimen/padding_12</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/colorHead</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/fontBody</item>
    </style>
    <style name="popup_window_style">
        <item name="android:windowEnterAnimation">@anim/popup_anim_in</item>
        <item name="android:windowExitAnimation">@anim/popup_anim_out</item>
    </style>
    <style name="search_contact_popup_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/credit_button_height</item>
        <item name="android:textColor">@color/alert_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/fontTitle</item>
    </style>

</resources>