<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pay_notify_layout"
    style="@style/main_page_margin_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/pay_notify_header"
        style="@style/relative_layout_title_style"
        android:background="@color/color_white">

        <TextView
            style="@style/main_fragment_layout_title_left_style"
            android:drawableLeft="@drawable/icon_pay_notify"
            android:text="@string/online_pay_notify" />

        <TextView
            style="@style/main_fragment_layout_title_right_style"
            android:text="@string/main_tech_order_all" />
    </RelativeLayout>

    <View style="@style/horizontal_divider_line" />

    <FrameLayout
        android:id="@+id/fragment_pay_notify_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>