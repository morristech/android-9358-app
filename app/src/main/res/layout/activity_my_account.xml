<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xmd.technician.window.MyAccountActivity">

    <include layout="@layout/toolbar" />

    <android.support.v7.widget.CardView
        android:id="@+id/customer_reward_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/feedback_btn_width"
        android:layout_marginTop="@dimen/search_margin"
        android:layout_marginLeft="@dimen/search_margin"
        android:layout_marginRight="@dimen/search_margin"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/personal_padding"
            android:layout_marginLeft="@dimen/search_margin"
            android:drawableLeft="@drawable/icon29"
            android:drawablePadding="@dimen/search_margin"
            android:gravity="center_vertical"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/fontTitle"
            android:text="@string/customer_reward"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/personal_item_height"
            android:layout_marginBottom="@dimen/search_margin"
            android:textColor="@color/colorRemark"
            android:textSize="@dimen/fontTitle"
            android:text="￥"/>

        <TextView
            android:id="@+id/customer_reward_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/message_item_height"
            android:textColor="@color/colorRemark"
            android:textSize="@dimen/fontBig"
            android:text="0"/>

        <Button
            android:id="@+id/customer_consume"
            android:layout_width="@dimen/message_item_height"
            android:layout_height="@dimen/work_time_padding"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/personal_padding"
            android:layout_marginRight="@dimen/search_margin"
            android:background="@drawable/account_button_selector_bg"
            android:textColor="@color/button_press_bg"
            android:textSize="@dimen/fontBody"
            android:text="@string/consume"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/coupon_commission_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/feedback_btn_width"
        android:layout_marginTop="@dimen/search_margin"
        android:layout_marginLeft="@dimen/search_margin"
        android:layout_marginRight="@dimen/search_margin"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/personal_padding"
            android:layout_marginLeft="@dimen/search_margin"
            android:drawableLeft="@drawable/icon30"
            android:drawablePadding="@dimen/search_margin"
            android:gravity="center_vertical"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/fontTitle"
            android:text="@string/coupon_commission"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/personal_item_height"
            android:layout_marginBottom="@dimen/search_margin"
            android:textColor="@color/colorRemark"
            android:textSize="@dimen/fontTitle"
            android:text="￥"/>

        <TextView
            android:id="@+id/coupon_commission_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/message_item_height"
            android:textColor="@color/colorRemark"
            android:textSize="@dimen/fontBig"
            android:text="0"/>

        <Button
            android:id="@+id/coupon_consume"
            android:layout_width="@dimen/message_item_height"
            android:layout_height="@dimen/work_time_padding"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/personal_padding"
            android:layout_marginRight="@dimen/search_margin"
            android:background="@drawable/account_button_selector_bg"
            android:textColor="@color/button_press_bg"
            android:textSize="@dimen/fontBody"
            android:text="@string/consume"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/clock_commission_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/feedback_btn_width"
        android:layout_marginTop="@dimen/search_margin"
        android:layout_marginLeft="@dimen/search_margin"
        android:layout_marginRight="@dimen/search_margin"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/personal_padding"
            android:layout_marginLeft="@dimen/search_margin"
            android:drawableLeft="@drawable/icon31"
            android:drawablePadding="@dimen/search_margin"
            android:gravity="center_vertical"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/fontTitle"
            android:text="@string/clock_commission"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/personal_item_height"
            android:layout_marginBottom="@dimen/search_margin"
            android:textColor="@color/colorRemark"
            android:textSize="@dimen/fontTitle"
            android:text="￥"/>

        <TextView
            android:id="@+id/clock_commission_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/message_item_height"
            android:textColor="@color/colorRemark"
            android:textSize="@dimen/fontBig"
            android:text="0"/>

        <Button
            android:id="@+id/clock_consume"
            android:layout_width="@dimen/message_item_height"
            android:layout_height="@dimen/work_time_padding"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/personal_padding"
            android:layout_marginRight="@dimen/search_margin"
            android:background="@drawable/account_button_selector_bg"
            android:textColor="@color/button_press_bg"
            android:textSize="@dimen/fontBody"
            android:text="@string/consume"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/order_commission_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/feedback_btn_width"
        android:layout_marginTop="@dimen/search_margin"
        android:layout_marginLeft="@dimen/search_margin"
        android:layout_marginRight="@dimen/search_margin"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/personal_padding"
            android:layout_marginLeft="@dimen/search_margin"
            android:drawableLeft="@drawable/icon45"
            android:drawablePadding="@dimen/search_margin"
            android:gravity="center_vertical"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/fontTitle"
            android:text="@string/order_commission"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/personal_item_height"
            android:layout_marginBottom="@dimen/search_margin"
            android:textColor="@color/colorRemark"
            android:textSize="@dimen/fontTitle"
            android:text="￥"/>

        <TextView
            android:id="@+id/order_commission_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/message_item_height"
            android:textColor="@color/colorRemark"
            android:textSize="@dimen/fontBig"
            android:text="0"/>

        <Button
            android:id="@+id/order_consume"
            android:layout_width="@dimen/message_item_height"
            android:layout_height="@dimen/work_time_padding"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/personal_padding"
            android:layout_marginRight="@dimen/search_margin"
            android:background="@drawable/account_button_selector_bg"
            android:textColor="@color/button_press_bg"
            android:textSize="@dimen/fontBody"
            android:text="@string/consume"/>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/time_card_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/feedback_btn_width"
        android:layout_marginTop="@dimen/search_margin"
        android:layout_marginLeft="@dimen/search_margin"
        android:layout_marginRight="@dimen/search_margin"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/personal_padding"
            android:layout_marginLeft="@dimen/search_margin"
            android:drawableLeft="@drawable/icon_time_card"
            android:drawablePadding="@dimen/search_margin"
            android:gravity="center_vertical"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/fontTitle"
            android:text="次卡提成" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/personal_item_height"
            android:layout_marginBottom="@dimen/search_margin"
            android:textColor="@color/colorRemark"
            android:textSize="@dimen/fontTitle"
            android:text="￥" />

        <TextView
            android:id="@+id/time_card_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/message_item_height"
            android:textColor="@color/colorRemark"
            android:textSize="@dimen/fontBig"
            android:text="0" />

        <Button
            android:id="@+id/time_card_consume"
            android:layout_width="@dimen/message_item_height"
            android:layout_height="@dimen/work_time_padding"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/personal_padding"
            android:layout_marginRight="@dimen/search_margin"
            android:background="@drawable/account_button_selector_bg"
            android:textColor="@color/button_press_bg"
            android:textSize="@dimen/fontBody"
            android:text="@string/consume" />
    </android.support.v7.widget.CardView>
</LinearLayout>
