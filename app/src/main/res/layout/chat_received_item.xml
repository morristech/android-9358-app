<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/personal_margin"
    android:layout_marginRight="@dimen/coupon_item_height">

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/personal_margin"
        android:layout_marginRight="@dimen/personal_margin"
        android:textColor="@color/colorRemark"
        android:textSize="@dimen/fontBody"
        android:text="03-19"/>

    <com.xmd.technician.widget.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/avatar_head"
        android:layout_height="@dimen/avatar_head"
        android:layout_below="@+id/time"
        android:layout_marginLeft="@dimen/search_margin"
        android:layout_marginRight="@dimen/search_margin"
        android:background="@drawable/icon22"/>

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/avatar"
        android:layout_below="@+id/time"
        android:background="@drawable/recv_text"
        android:minHeight="@dimen/avatar_head"
        android:autoLink="all"
        android:gravity="center_vertical"
        android:textColor="@color/colorHead"
        android:textSize="@dimen/fontBody"
        android:text="hello"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/avatar"
        android:layout_below="@+id/time"
        android:background="@drawable/icon08"
        android:minHeight="@dimen/avatar_head"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/user_reward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/avatar"
        android:layout_below="@+id/time"
        android:background="@drawable/recv_reward"
        android:gravity="center_vertical"
        android:minHeight="@dimen/avatar_head"
        android:textColor="@color/colorHead"
        android:textSize="@dimen/fontBody"
        android:text="@string/app_info_title"
        android:visibility="gone"/>
    
    <RelativeLayout
        android:id="@+id/order_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/avatar"
        android:layout_below="@+id/time"
        android:background="@drawable/recv_order_bg"
        android:visibility="visible">

        <TextView
            android:id="@+id/order_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/personal_padding"
            android:layout_marginLeft="@dimen/personal_padding"
            android:textColor="@color/colorMain"
            android:textSize="@dimen/fontTitle"
            android:text="@string/app_info_title"/>

        <TextView
            android:id="@+id/order_time_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_title"
            android:layout_marginTop="@dimen/personal_padding"
            android:layout_marginLeft="@dimen/personal_padding"
            android:textColor="@color/colorBody"
            android:textSize="@dimen/fontBody"
            android:text="@string/app_info_title"/>

        <TextView
            android:id="@+id/order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_title"
            android:layout_toRightOf="@+id/order_time_hint"
            android:layout_marginTop="@dimen/personal_padding"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/fontBody"
            android:text="@string/app_info_title"/>

        <TextView
            android:id="@+id/order_service_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_time"
            android:layout_marginTop="@dimen/personal_padding"
            android:layout_marginLeft="@dimen/personal_padding"
            android:textColor="@color/colorBody"
            android:textSize="@dimen/fontBody"
            android:text="@string/app_info_title"/>

        <TextView
            android:id="@+id/order_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_time"
            android:layout_toRightOf="@+id/order_service_hint"
            android:layout_marginTop="@dimen/personal_padding"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/fontBody"
            android:text="@string/app_info_title"/>

        <LinearLayout
            android:id="@+id/order_menu_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_service"
            android:layout_marginTop="@dimen/personal_padding"
            android:background="@drawable/bg"
            android:orientation="horizontal">
            <Button
                android:id="@+id/order_accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/fontBody"
                android:text="@string/accept"/>

            <Button
                android:id="@+id/order_refuse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/personal_padding"
                android:textColor="@android:color/white"
                android:textSize="@dimen/fontBody"
                android:text="@string/refuse"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>