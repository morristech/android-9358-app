<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/color_white"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="10dp">

    <com.xmd.technician.widget.CircleImageView
        android:id="@+id/img_item_avatar"
        android:layout_width="@dimen/comment_message_height"
        android:layout_height="@dimen/comment_message_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/icon22" />

    <TextView
        android:id="@+id/tv_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="已回复"
        android:textColor="@color/text_color_can_chat"
        android:textSize="@dimen/fontBody"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_item_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/tv_item_status"
        android:layout_toRightOf="@id/img_item_avatar"
        android:text="客户昵称"
        android:textColor="@color/black"
        android:textSize="@dimen/fontHead" />

    <TextView
        android:id="@+id/tv_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@id/tv_item_status"
        android:layout_toRightOf="@id/img_item_avatar"
        android:text="招呼时间"
        android:textColor="@color/colorRemark"
        android:textSize="@dimen/fontBody" />

    <View
        style="@style/horizontal_divider_line"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
