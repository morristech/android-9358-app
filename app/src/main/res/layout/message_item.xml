<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/message_item_height"
    android:background="@android:color/white"
    android:padding="@dimen/search_margin">

    <com.xmd.technician.widget.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/avatar_head"
        android:layout_height="@dimen/avatar_head"
        android:layout_marginRight="@dimen/search_padding_left"
        android:background="@drawable/icon22"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/avatar"
        android:textColor="@color/colorTitle"
        android:textSize="@dimen/fontTitle"
        android:text="name"/>

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/avatar"
        android:layout_alignParentBottom="true"
        android:singleLine="true"
        android:textColor="@color/colorRemark"
        android:textSize="@dimen/fontBody"
        android:text="hello"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/search_margin"
        android:textColor="@color/colorRemark"
        android:textSize="@dimen/fontNormal"
        android:text="03-19"/>

    <TextView
        android:id="@+id/unread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/search_view_height"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/time"
        android:background="@drawable/unread_count_bg"
        android:gravity="center"
        android:textSize="@dimen/fontRemark" />
</RelativeLayout>