<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/personal_margin">

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/personal_margin"
        android:textColor="@color/colorRemark"
        android:textSize="@dimen/fontBody"
        android:text="03-19" />

    <com.xmd.technician.widget.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/avatar_head"
        android:layout_height="@dimen/avatar_head"
        android:layout_below="@+id/time"
        android:layout_marginLeft="@dimen/search_margin"
        android:layout_marginRight="@dimen/search_margin"
        android:background="@drawable/icon22" />
    <RelativeLayout
        android:id="@+id/user_reward_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/avatar"
        android:layout_below="@+id/time"
        android:background="@drawable/recv_reward"
        >

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="打赏:"
            android:textColor="@color/color_white"
            android:textSize="@dimen/fontBody"
            />
       <TextView
        android:id="@+id/text_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  ￥"
           android:layout_alignTop="@id/text"
           android:layout_marginTop="-2dp"
        android:layout_toRightOf="@id/text"
        android:textColor="@color/color_white"
        android:textSize="@dimen/fontBody"
        />
        <TextView
            android:id="@+id/user_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/color_white"
            android:layout_toRightOf="@id/text_sign"
            android:layout_marginRight="@dimen/margin_2"
            android:textSize="@dimen/fontHead"
            android:text="1"
            android:layout_marginTop="-4dp"
            android:layout_marginLeft="@dimen/margin_2"
            android:textStyle="bold"
            />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_reward_detail"
        android:layout_marginTop="@dimen/personal_padding">
        <TextView
            android:id="@+id/reward_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/reward_tip_bg"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/hb"
            android:paddingTop="@dimen/search_margin"
            android:paddingBottom="@dimen/search_margin"
            android:paddingLeft="@dimen/personal_padding"
            android:paddingRight="@dimen/personal_padding"
            android:drawablePadding="@dimen/personal_padding"
            android:textColor="@color/color_white"
            android:textSize="@dimen/fontRemark"
             />
    </FrameLayout>

</RelativeLayout>