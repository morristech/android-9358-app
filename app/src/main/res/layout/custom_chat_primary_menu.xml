<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_chat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xmd.technician.window.BrowserActivity">

    <include layout="@layout/toolbar" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_widget"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/input_menu"
        android:layout_below="@+id/toolbar"
        android:layout_marginBottom="@dimen/personal_padding">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null" />
    </android.support.v4.widget.SwipeRefreshLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_divide_height"
        android:layout_above="@+id/input_menu"
        android:background="@color/colorLineDivide" />


    <RelativeLayout
        android:id="@+id/input_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btn_send"
            android:layout_width="@dimen/send_msg_btn_width"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/search_margin"
            android:layout_marginTop="3dp"
            android:background="@drawable/login_button_main_selector"
            android:drawableLeft="@drawable/fas"
            android:minHeight="0dp"
            android:paddingLeft="@dimen/search_margin"
            android:text="@string/button_send"
            android:textColor="@android:color/white"
            android:textSize="@dimen/fontBody" />

        <EditText
            android:id="@+id/et_sendmessage"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginBottom="@dimen/search_margin"
            android:layout_marginLeft="@dimen/search_margin"
            android:layout_marginRight="@dimen/search_margin"
            android:layout_toLeftOf="@+id/btn_send"
            android:background="@android:drawable/editbox_background_normal"
            android:maxLines="3"
            android:paddingLeft="@dimen/search_margin"
            android:textColor="@color/colorBody"
            android:textSize="@dimen/fontBody" />

        <LinearLayout
            android:id="@+id/menu_layout"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_below="@+id/et_sendmessage"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            >

            <LinearLayout
                android:id="@+id/btn_photo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/personal_padding"
                android:paddingRight="@dimen/personal_padding">

                <ImageView
                    android:layout_width="@dimen/personal_item_icon_height"
                    android:layout_height="match_parent"
                    android:background="@drawable/menu_picture_selector"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_face"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/personal_padding"
                android:paddingRight="@dimen/personal_padding">

                <ImageView
                    android:layout_width="@dimen/personal_item_icon_height"
                    android:layout_height="match_parent"
                    android:background="@drawable/menu_face_selector"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_common_msg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/personal_padding"
                android:paddingRight="@dimen/personal_padding">

                <ImageView
                    android:layout_width="@dimen/personal_item_icon_height"
                    android:layout_height="match_parent"
                    android:background="@drawable/menu_common_selector"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_common_reward"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/personal_padding"
                android:paddingRight="@dimen/personal_padding">

                <ImageView
                    android:layout_width="@dimen/personal_item_icon_height"
                    android:layout_height="match_parent"
                    android:background="@drawable/menu_reward_selector"
                    android:scaleType="fitCenter" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/btn_common_coupon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/personal_padding"
                android:paddingRight="@dimen/personal_padding">

                <ImageView
                    android:layout_width="@dimen/personal_item_icon_height"
                    android:layout_height="match_parent"
                    android:background="@drawable/menu_coupon_selector"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_common_game"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/personal_padding"
                android:paddingRight="@dimen/personal_padding">

                <ImageView
                    android:layout_width="@dimen/personal_item_icon_height"
                    android:layout_height="match_parent"
                    android:background="@drawable/menu_coupon_game"
                    android:scaleType="fitCenter" />
            </LinearLayout>

        </LinearLayout>

        <com.xmd.technician.widget.EmojiconMenu
            android:id="@+id/emojicon_menu_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menu_layout"
            android:layout_marginTop="@dimen/search_margin"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/common_msg_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/game_content_height"
            android:layout_below="@+id/menu_layout"
            android:layout_marginTop="@dimen/button_radius"
            android:background="@color/color_white"
            android:orientation="vertical"
            android:visibility="gone">

            <android.support.v4.view.ViewPager
                android:id="@+id/comment_msg_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"></android.support.v4.view.ViewPager>

            <RelativeLayout
                android:id="@+id/indicator_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/search_view_height"
                android:gravity="center">

                <ImageView
                    android:id="@+id/round_indicator_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_indicator_bg"
                    android:clickable="true" />

                <ImageView
                    android:id="@+id/round_indicator_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/tab_indicator_text_padding"
                    android:layout_toRightOf="@id/round_indicator_left"
                    android:background="@drawable/round_indicator_bg" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
