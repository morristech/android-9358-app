<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/personal_margin">

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/personal_margin"
        android:layout_marginRight="@dimen/personal_margin"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorRemark"
        android:textSize="@dimen/fontBody"
        android:text="03-19"/>

    <com.xmd.technician.widget.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/avatar_head"
        android:layout_height="@dimen/avatar_head"
        android:layout_below="@+id/time"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/search_margin"
        android:layout_marginRight="@dimen/search_margin"
        android:background="@drawable/icon22"/>

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/avatar"
        android:layout_below="@+id/time"
        android:background="@drawable/duihuakuang02"
        android:minHeight="@dimen/avatar_head"
        android:autoLink="all"
        android:gravity="center_vertical"
        android:textColor="@color/colorBody"
        android:textSize="@dimen/fontBody"
        android:text="hello"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/avatar"
        android:layout_below="@+id/time"
        android:background="@drawable/icon08"
        android:minHeight="@dimen/avatar_head"
        android:visibility="gone"/>

</RelativeLayout>