<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMain"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/info_item"
                android:layout_width="match_parent"
                android:layout_height="@dimen/personal_info_height"
                android:background="@drawable/personal_item_selector"
                android:paddingLeft="@dimen/personal_padding"
                android:paddingRight="@dimen/personal_padding">

                <com.xmd.technician.widget.CircleImageView
                    android:id="@+id/avatar"
                    android:layout_width="@dimen/photo_head_big"
                    android:layout_height="@dimen/photo_head_big"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/search_margin"
                    android:background="@drawable/icon22" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/avatar"
                    android:layout_toRightOf="@+id/avatar"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/fontHead" />

                <Button
                    android:id="@+id/invite_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_name"
                    android:layout_marginTop="@dimen/small_space"
                    android:layout_toRightOf="@+id/avatar"
                    android:background="@drawable/login_button_main_selector"
                    android:minHeight="0dp"
                    android:padding="@dimen/three_radius"
                    android:text="@string/personal_fragment_button_invite"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/fontNormal"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/club_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_name"
                    android:layout_marginTop="@dimen/small_space"
                    android:layout_toRightOf="@+id/avatar"
                    android:ellipsize="marquee"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textColor="@color/colorBody"
                    android:textSize="@dimen/fontBody" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/right_arrow" />


                <View
                    android:id="@+id/description_line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_divide_height"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorLineDivide" />
            </RelativeLayout>

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="@dimen/personal_description_height"
                android:background="@drawable/personal_item_selector"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/personal_padding"
                android:paddingRight="@dimen/personal_padding"
                android:singleLine="true"
                android:textColor="@color/colorBody"
                android:textSize="@dimen/fontBody" />


            <RelativeLayout
                android:id="@+id/user_card_share"
                style="@style/user_center_layout"
                android:layout_marginTop="@dimen/margin_right_10">

                <ImageView
                    style="@style/user_center_imLeft"
                    android:background="@drawable/icon_user_card" />

                <TextView
                    style="@style/user_center_tvName"
                    android:text="@string/personal_fragment_layout_user_card" />

                <TextView
                    android:layout_width="75dp"
                    android:layout_height="23dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_marginTop="11dp"
                    android:background="@drawable/bg_share"
                    android:gravity="center"
                    android:text="立即分享"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/fontBody" />

                <ImageView style="@style/user_center_ivRight" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/account_item"
                style="@style/user_center_layout"
                android:layout_marginTop="@dimen/margin_15">

                <ImageView
                    style="@style/user_center_imLeft"
                    android:background="@drawable/icon24" />

                <TextView
                    style="@style/user_center_tvName"
                    android:text="@string/personal_fragment_layout_account" />

                <ImageView style="@style/user_center_ivRight" />

                <TextView
                    android:id="@+id/account_balance"
                    style="@style/user_center_tvRight" />

            </RelativeLayout>

            <View style="@style/horizontal_divider_line" />

            <RelativeLayout
                android:id="@+id/credit_center"
                style="@style/user_center_layout"
                android:visibility="gone">

                <ImageView
                    style="@style/user_center_imLeft"
                    android:background="@drawable/icon_credit" />

                <TextView
                    style="@style/user_center_tvName"
                    android:text="@string/personal_fragment_layout_credit" />

                <ImageView style="@style/user_center_ivRight" />

                <TextView
                    android:id="@+id/total_credit"
                    style="@style/user_center_tvRight" />

            </RelativeLayout>

            <View style="@style/horizontal_divider_line" />

            <RelativeLayout
                android:id="@+id/user_center_ranking"
                style="@style/user_center_layout">

                <ImageView
                    style="@style/user_center_imLeft"
                    android:background="@drawable/icon_leaderboard" />

                <TextView
                    style="@style/user_center_tvName"
                    android:text="@string/personal_fragment_ranging" />

                <ImageView style="@style/user_center_ivRight" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/comment_item"
                style="@style/user_center_layout"
                android:layout_marginTop="@dimen/margin_15">

                <ImageView
                    style="@style/user_center_imLeft"
                    android:background="@drawable/icon27" />

                <TextView
                    android:id="@+id/comment_title"
                    style="@style/user_center_tvName"
                    android:text="@string/personal_fragment_layout_my_comment" />

                <TextView
                    android:id="@+id/comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/personal_padding"
                    android:layout_toRightOf="@+id/comment_title"
                    android:textColor="@color/colorRemark"
                    android:textSize="@dimen/fontTitle" />

                <ImageView style="@style/user_center_ivRight" />

                <TextView
                    android:id="@+id/unread_count"
                    style="@style/user_center_tvRight" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/time_item"
                style="@style/user_center_layout"
                android:layout_marginTop="@dimen/margin_15">

                <ImageView
                    style="@style/user_center_imLeft"
                    android:background="@drawable/icon25" />

                <TextView
                    style="@style/user_center_tvName"
                    android:text="@string/personal_fragment_layout_work_time" />

                <ImageView style="@style/user_center_ivRight" />


                <TextView
                    android:id="@+id/status"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/personal_item_margin_right"
                    android:background="@drawable/tech_time_state"
                    android:enabled="true"
                    android:gravity="center"
                    android:text="闲"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/fontBody" />
            </RelativeLayout>

            <View style="@style/horizontal_divider_line" />

            <RelativeLayout
                android:id="@+id/service_item"
                style="@style/user_center_layout">

                <ImageView
                    style="@style/user_center_imLeft"
                    android:background="@drawable/icon26" />

                <TextView
                    style="@style/user_center_tvName"
                    android:text="@string/personal_fragment_layout_service_items" />

                <ImageView style="@style/user_center_ivRight" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/setting_item"
                style="@style/user_center_layout"
                android:layout_marginTop="@dimen/margin_15">

                <ImageView
                    style="@style/user_center_imLeft"
                    android:background="@drawable/icon28" />

                <TextView
                    style="@style/user_center_tvName"
                    android:text="@string/personal_fragment_layout_setting" />

                <ImageView style="@style/user_center_ivRight" />
            </RelativeLayout>
        </LinearLayout>


    </ScrollView>


</LinearLayout>