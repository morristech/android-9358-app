<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/coupon_item_height"
    android:layout_marginTop="@dimen/personal_margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/personal_margin"
        android:layout_marginRight="@dimen/personal_margin"
        android:text="03-19"
        android:textColor="@color/colorRemark"
        android:textSize="@dimen/fontBody" />

    <com.xmd.technician.widget.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/avatar_head"
        android:layout_height="@dimen/avatar_head"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/time"
        android:layout_marginLeft="@dimen/search_margin"
        android:layout_marginRight="@dimen/search_margin"
        android:background="@drawable/icon22" />

    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:layout_marginLeft="@dimen/search_margin"
        android:layout_toLeftOf="@+id/avatar">

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time"
            android:layout_toLeftOf="@+id/avatar"
            android:autoLink="all"
            android:background="@drawable/sent_text"
            android:gravity="center_vertical"
            android:minHeight="@dimen/avatar_head"
            android:text="hello"
            android:textColor="@color/colorBody"
            android:textSize="@dimen/fontBody"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time"
            android:layout_toLeftOf="@+id/avatar"
            android:minHeight="@dimen/avatar_head"
            android:src="@drawable/icon08"
            android:visibility="gone" />

        <TextView
            android:id="@+id/user_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time"
            android:layout_toLeftOf="@+id/avatar"
            android:background="@drawable/sent_reward"
            android:gravity="center_vertical"
            android:minHeight="@dimen/avatar_head"
            android:text="@string/request_user_reward"
            android:textColor="@color/color_white"
            android:textSize="@dimen/fontBody"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/coupon_container"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_below="@+id/time"
            android:layout_toLeftOf="@+id/avatar"
            android:background="@drawable/sent_coupon_bg"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/coupon_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/coupon_type_bg"
                    android:textColor="@color/text_color_yellow"
                    android:textSize="@dimen/fontRemark" />

                <TextView
                    android:id="@+id/coupon_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="end"
                    android:paddingRight="@dimen/margin_15"
                    android:text="@string/app_info_title"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/fontTitle"

                    />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/coupon_period"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_marginTop="@dimen/margin_right_10"
                android:ellipsize="end"
                android:gravity="right|bottom"
                android:paddingTop="@dimen/margin_5"
                android:singleLine="true"
                android:text="2106.3"
                android:textColor="@color/colorRemark"
                android:textSize="@dimen/fontRemark" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/paid_coupon_container"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_below="@+id/time"
            android:layout_toLeftOf="@+id/avatar"
            android:background="@drawable/sent_coupon_bg"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/qdz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/qdz" />

                <TextView
                    android:id="@+id/paid_coupon_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/qdz"
                    android:gravity="end"
                    android:singleLine="true"
                    android:text="@string/app_info_title"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/fontTitle" />

            </RelativeLayout>

            <TextView
                android:id="@+id/paid_coupon_period"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_marginTop="@dimen/margin_right_10"
                android:gravity="right|bottom"
                android:paddingTop="@dimen/margin_5"
                android:text="2106.3"
                android:textColor="@color/colorRemark"
                android:textSize="@dimen/fontRemark" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/order_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time"
            android:layout_toLeftOf="@+id/avatar"
            android:background="@drawable/sent_order_bg"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/order_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/personal_padding"
                android:layout_marginTop="@dimen/personal_padding"
                android:text="@string/app_info_title"
                android:textColor="@color/contact_info_unit"
                android:textSize="@dimen/fontTitle" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/personal_padding">

                <TextView
                    android:id="@+id/order_time_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/personal_padding"
                    android:text="@string/app_info_title"
                    android:textColor="@color/colorBody"
                    android:textSize="@dimen/fontBody" />

                <TextView
                    android:id="@+id/order_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/personal_padding"
                    android:text="@string/app_info_title"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/fontBody" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/personal_padding"
                android:layout_marginTop="@dimen/personal_padding">

                <TextView
                    android:id="@+id/order_service_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/personal_padding"
                    android:text="@string/app_info_title"
                    android:textColor="@color/colorBody"
                    android:textSize="@dimen/fontBody" />

                <TextView
                    android:id="@+id/order_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/personal_padding"
                    android:text="@string/app_info_title"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/fontBody" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/order_menu_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_service"
                android:background="@drawable/bg"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/personal_padding"
                android:paddingRight="@dimen/personal_padding"
                android:visibility="gone">

                <Button
                    android:id="@+id/order_accept"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/work_time_padding"
                    android:layout_weight="1"
                    android:background="@drawable/login_button_main_selector"
                    android:drawableLeft="@drawable/ic_baisegouxuan"
                    android:paddingLeft="@dimen/search_margin"
                    android:text="@string/accept"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/fontBody" />

                <Button
                    android:id="@+id/order_refuse"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/work_time_padding"
                    android:layout_marginLeft="@dimen/personal_margin"
                    android:layout_weight="1"
                    android:background="@drawable/account_button_selector_bg"
                    android:drawableLeft="@drawable/ic_hongseguanbi"
                    android:gravity="center"
                    android:paddingLeft="@dimen/search_margin"
                    android:text="@string/refuse"
                    android:textColor="@color/colorMainBtn"
                    android:textSize="@dimen/fontBody" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dice_game_sent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dice_game_view_height"
            android:layout_below="@+id/time"
            android:layout_toLeftOf="@+id/avatar"
            android:background="@drawable/round_rect_white_bg"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/search_view_height"
                android:background="@drawable/send_dice_game_top_bg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/invite_game_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_15"
                    android:paddingTop="@dimen/margin_5"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/fontTitle_small" />

                <TextView
                    android:id="@+id/dice_game_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin_15"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_5"
                    android:background="@drawable/send_game_amount_bg"
                    android:gravity="center"
                    android:paddingLeft="@dimen/game_amount_radius"
                    android:paddingRight="@dimen/game_amount_radius"
                    android:textColor="@color/contact_marker"
                    android:textSize="@dimen/fontRemark"

                    />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20">

                <TextView
                    android:id="@+id/adverse_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dialog_multi_check_default_height"
                    android:textColor="@color/dice_game_name_color"
                    android:textSize="@dimen/fontTitle"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dialog_multi_check_default_height"
                    android:textColor="@color/dice_game_name_color"
                    android:textSize="@dimen/fontTitle"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/share_btn_width"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_10">

                <TextView
                    android:id="@+id/wait_game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/margin_5"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin_25"
                    android:text="@string/dice_game_wait"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/game_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/wait_game"
                    android:layout_below="@id/wait_game"
                    android:layout_marginBottom="@dimen/margin_2"
                    android:layout_marginLeft="@dimen/margin_25"
                    android:layout_marginTop="@dimen/margin_5"
                    android:background="@drawable/send_dice_game_cancel_bg"
                    android:gravity="center"
                    android:paddingLeft="@dimen/margin_5"
                    android:paddingRight="@dimen/margin_5"
                    android:text="@string/cancel"
                    android:visibility="invisible"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/fontNormal"
                    />

                <com.xmd.technician.widget.RoundImageView
                    android:id="@+id/user_head"
                    src="@drawable/icon22"
                    android:layout_width="@dimen/personal_item_height"
                    android:layout_height="@dimen/personal_item_height"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dialog_multi_check_default_height"
                    android:visibility="gone"
                    app:borderRadius="@dimen/search_margin"
                    app:type="round" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_dice" />

                <com.xmd.technician.widget.RoundImageView
                    android:id="@+id/adverse_head"
                    android:layout_width="@dimen/personal_item_height"
                    android:layout_height="@dimen/personal_item_height"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dialog_multi_check_default_height"
                    android:visibility="gone"
                    app:borderRadius="@dimen/search_margin"
                    app:src="@drawable/icon22"
                    app:type="round" />

                <TextView
                    android:id="@+id/refuse_game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dialog_multi_check_default_height"
                    android:gravity="center"
                    android:text="@string/dice_game_reject"
                    android:visibility="gone" />

            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/status_failed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/content_container"
        android:src="@drawable/chat_sent_failed"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/status_progressbar"
        android:layout_width="@dimen/search_view_height"
        android:layout_height="@dimen/search_view_height"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/content_container"
        android:visibility="gone" />

</RelativeLayout>