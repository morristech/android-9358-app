<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <include layout="@layout/toolbar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:background="@color/app_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:padding="@dimen/large_space"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/tab_bg"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_share_qr_code"
                    android:layout_width="@dimen/paid_coupon_detail_activity_qrcode_size"
                    android:layout_height="@dimen/paid_coupon_detail_activity_qrcode_size" />

                <TextView
                    android:id="@+id/tv_consume_money_description"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/paid_coupon_detail_activity_consume_description_text_size"
                    android:textColor="@color/paid_coupon_detail_activity_value_text_color"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/large_space" />

            </LinearLayout>

            <!-- TODO -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/inter_space"
                android:background="@color/tab_bg"
                android:orientation="vertical"
                android:padding="@dimen/inter_space">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/call"
                        android:text="@string/paid_coupon_detail_coupon_period" />

                    <TextView
                        android:id="@+id/tv_coupon_period"
                        android:textColor="@color/paid_coupon_detail_activity_value_text_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    style="@style/list_item_line"
                    android:layout_marginTop="@dimen/inter_space" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/inter_space"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/desc"
                        android:text="@string/paid_coupon_detail_act_content" />

                    <WebView
                        android:id="@+id/wv_act_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/inter_space"
                        android:layout_marginTop="@dimen/small_space" />

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_user_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/selector_dialog_positive_button_text"
                android:layout_marginLeft="@dimen/inter_space"
                android:layout_marginRight="@dimen/inter_space"
                android:layout_marginTop="@dimen/inter_space"
                android:background="@drawable/selector_operation_positive_button_bg"
                android:text="@string/paid_coupon_detail_user_detail" />

            <Button
                android:id="@+id/btn_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/selector_dialog_positive_button_text"
                android:layout_marginLeft="@dimen/inter_space"
                android:layout_marginRight="@dimen/inter_space"
                android:layout_marginTop="@dimen/inter_space"
                android:enabled="false"
                android:background="@drawable/selector_operation_positive_button_bg"
                android:text="@string/paid_coupon_detail_share" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/inter_space"
                android:layout_marginRight="@dimen/inter_space"
                android:layout_marginTop="@dimen/inter_space"
                android:text="@string/paid_coupon_detail_tips" />

            <TextView
                android:id="@+id/tv_tips_expire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/inter_space"
                android:layout_marginRight="@dimen/inter_space" />

            <TextView
                android:id="@+id/tv_tips_verified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/inter_space"
                android:layout_marginRight="@dimen/inter_space"
                android:layout_marginBottom="@dimen/inter_space"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>