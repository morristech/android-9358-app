<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tab_bg"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="@dimen/inter_space">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/share_to_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:drawablePadding="@dimen/small_space"
            android:drawableTop="@drawable/selector_share_to_friend"
            android:text="@string/share_to_friend" />

        <TextView
            android:id="@+id/share_to_timeline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/inter_space"
            android:clickable="true"
            android:gravity="center"
            android:drawablePadding="@dimen/small_space"
            android:drawableTop="@drawable/selector_share_to_timeline"
            android:text="@string/share_to_timeline" />

        <TextView
            android:id="@+id/share_to_others"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/inter_space"
            android:clickable="true"
            android:gravity="center"
            android:drawablePadding="@dimen/small_space"
            android:drawableTop="@drawable/selector_share_to_others"
            android:text="@string/share_to_others" />
    </LinearLayout>

</LinearLayout>