<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="@dimen/dialog_min_width"
    android:background="@color/tab_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:padding="@dimen/inter_space"
        android:gravity="center"
        android:textColor="@color/dialog_title_text_color"
        android:textSize="@dimen/dialog_content_title_size"
        android:layout_height="@dimen/dialog_title_height"
        android:text="Title"/>

    <View style="@style/dialog_gray_line" />

    <FrameLayout
        android:id="@+id/flContentContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dialog_content"
            android:padding="@dimen/inter_space"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dialog_content_height"
            android:gravity="center_vertical"
            android:textColor="@color/dialog_content_text_color"
            android:text="Content"
            android:textSize="@dimen/dialog_content_text_size" />
    </FrameLayout>


    <View style="@style/dialog_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_button_height"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_negative"
            style="@style/dialog_positive_button"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="no" />

        <Button
            android:id="@+id/dialog_positive"
            style="@style/dialog_negative_button"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="yes" />

    </LinearLayout>

</LinearLayout>