<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_content"
        android:padding="@dimen/inter_space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_content_height"
        android:gravity="center_vertical"
        android:text="Title"
        android:textSize="@dimen/dialog_content_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_button_height"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_negative"
            style="@style/dialog_negative_button"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="no" />

        <Button
            android:id="@+id/dialog_positive"
            style="@style/dialog_positive_button"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="yes" />

    </LinearLayout>

</LinearLayout>