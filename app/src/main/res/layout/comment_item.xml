<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/comment_item_height"
    android:background="@android:color/white"
    android:paddingLeft="@dimen/personal_padding"
    android:paddingRight="@dimen/personal_padding"
    android:paddingTop="@dimen/personal_padding">

    <com.xmd.technician.widget.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/search_view_height"
        android:layout_height="@dimen/search_view_height"
        android:layout_marginRight="@dimen/personal_padding"
        android:background="@drawable/icon22"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/avatar"
        android:textColor="@color/colorTitle"
        android:textSize="@dimen/fontTitle"
        android:text="null"/>

    <RatingBar
        android:id="@+id/ratings"
        style="@style/commentRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/avatar"
        android:layout_below="@id/name"
        android:layout_marginTop="@dimen/personal_padding"
        android:isIndicator="true"
        android:numStars="5"/>

    <TextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratings"
        android:layout_toRightOf="@+id/avatar"
        android:layout_marginTop="@dimen/search_margin"
        android:textColor="@color/colorBody"
        android:textSize="@dimen/fontBody"/>

    <TextView
        android:id="@+id/reward_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/name"
        android:textColor="@color/colorTitle"
        android:textSize="@dimen/fontTitle" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/ratings"
        android:textColor="@color/colorRemark"
        android:textSize="@dimen/fontRemark"
        android:text="10:00"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_divide_height"
        android:layout_alignParentBottom="true"
        android:background="@color/colorLineDivide" />

</RelativeLayout>