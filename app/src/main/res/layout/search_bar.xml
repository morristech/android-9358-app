    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5"
        android:background="@android:drawable/editbox_background_normal"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/search_word"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/search_view_height"
            android:paddingLeft="@dimen/search_padding_left"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:singleLine="true"
            android:maxLength="10"
            android:textColor="@color/colorBody"
            android:textSize="@dimen/fontTitle"
            android:textColorHint="@color/colorRemarkText"
            android:hint="@string/search_hint"/>
        <TextView
            style="@style/vertical_divider_line"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:background="@color/button_border" />
        <ImageView
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="@dimen/padding_5"
            android:src="@drawable/icon_sech" />
    </LinearLayout>
</RelativeLayout>