<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.xmd.technician.window.TechInfoActivity">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/album_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/app_default_padding"
                android:background="@android:color/white"
                android:visibility="visible"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingBottom="@dimen/app_default_padding"
                android:paddingLeft="@dimen/app_default_padding"
                android:textColor="@color/colorRemark"
                android:textSize="@dimen/fontRemark"
                android:text="@string/edit_activity_text_view_tip" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_divide_height"
                android:background="@color/colorLineDivide" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_divide_height"
                android:background="@color/colorLineDivide"
                android:layout_marginTop="@dimen/app_default_padding"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/personal_description_height"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/app_default_padding"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/fontTitle"
                    android:text="@string/edit_activity_text_view_desc" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_divide_height"
                android:background="@color/colorLineDivide" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/app_default_padding"
                android:paddingRight="@dimen/app_default_padding">


                <RelativeLayout
                    android:id="@+id/edit_activity_layout_head"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/message_item_height">

                    <TextView
                        android:id="@+id/avatar_hint"
                        style="@style/edit_activity_text_style"
                        android:layout_centerVertical="true"
                        android:text="@string/edit_activity_text_view_head" />

                    <com.xmd.technician.widget.RoundImageView
                        android:id="@+id/avatar"
                        android:layout_width="@dimen/avatar_head"
                        android:layout_height="@dimen/avatar_head"
                        android:layout_toRightOf="@+id/avatar_hint"
                        android:layout_marginLeft="@dimen/personal_margin"
                        android:layout_centerInParent="true"
                        app:type="round"
                        app:borderRadius="@dimen/search_margin"
                        app:src="@drawable/icon22"/>

                    <TextView
                        android:id="@+id/change_avatar_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:textColor="@color/colorRemark"
                        android:textSize="@dimen/fontRemark"
                        android:text="@string/edit_activity_text_view_change_head" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_divide_height"
                    android:background="@color/colorLineDivide" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/home_button_height"
                    android:gravity="center_vertical">


                    <TextView
                        android:id="@+id/user_name_hint"
                        style="@style/edit_activity_text_style"
                        android:layout_centerVertical="true"
                        android:text="@string/edit_activity_text_view_name" />


                    <EditText
                        android:id="@+id/user_name"
                        style="@style/edit_activity_edit_text_style"
                        android:layout_toRightOf="@id/user_name_hint"
                        android:maxLength="5"
                        android:singleLine="true"
                         />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_divide_height"
                    android:background="@color/colorLineDivide" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_divide_height"
                    android:background="@color/colorLineDivide" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/home_button_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/edit_activity_text_style"
                        android:text="@string/edit_activity_text_view_gender" />

                    <RadioGroup
                        android:id="@+id/radio_group_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!--TODO: change the resource pic-->

                        <RadioButton
                            android:id="@+id/button_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/personal_margin"
                            android:button="@null"
                            android:background="@null"
                            android:checked="true"
                            android:drawableLeft="@drawable/radio_button_style_selector"
                            android:text="女士"
                            android:textColor="@drawable/radio_button_text_color_selector"
                            android:textSize="@dimen/fontBody"/>

                        <RadioButton
                            android:id="@+id/button_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/personal_margin"
                            android:button="@null"
                            android:background="@null"
                            android:drawableLeft="@drawable/radio_button_style_selector"
                            android:text="先生"
                            android:textColor="@drawable/radio_button_text_color_selector"
                            android:textSize="@dimen/fontBody"/>

                    </RadioGroup>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_divide_height"
                    android:background="@color/colorLineDivide" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/home_button_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/edit_activity_text_style"
                        android:text="@string/edit_activity_text_view_place" />

                    <TextView
                        android:id="@+id/native_place"
                        style="@style/edit_activity_edit_text_style"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:text="请选择" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_divide_height"
                    android:background="@color/colorLineDivide" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/home_button_height"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/edit_activity_text_style"
                        android:text="@string/edit_activity_text_view_phone" />

                    <TextView
                        android:id="@+id/phone_number"
                        style="@style/edit_activity_edit_text_style"
                        android:gravity="center_vertical"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_divide_height"
                    android:background="@color/colorLineDivide" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/edit_activity_text_style"
                        android:layout_marginTop="@dimen/search_margin"
                        android:text="@string/edit_activity_text_view_introduce" />

                    <EditText
                        android:id="@+id/introduce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/personal_margin"
                        android:layout_marginTop="@dimen/search_margin"
                        android:layout_marginBottom="@dimen/search_margin"
                        android:lineSpacingExtra="@dimen/search_margin"
                        android:gravity="left"
                        android:maxLength="200"
                        android:background="@null"
                        android:textSize="@dimen/fontBody"
                        android:textColor="@color/colorBody"
                        android:textColorHint="@color/colorRemarkText"
                        android:imeOptions="actionSend"
                        android:hint="@string/edit_activity_text_view_introduce_desc" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_divide_height"
                    android:background="@color/colorLineDivide" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
