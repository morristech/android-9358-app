<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_item_height"
        android:background="@color/colorMain"
        >
        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_client"
                android:button="@null"
                android:gravity="center"
                android:text="@string/contact_customer"
                android:textColor="@drawable/selector_left_bg"
                android:checked="true"
                android:textSize="@dimen/fontTitle" />

            <RadioButton
                android:id="@+id/mine_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_right"
                android:button="@null"
                android:gravity="center"
                android:text="@string/contact_club"
                android:textSize="@dimen/fontTitle"
                android:textColor="@color/selector_right_bg"
                />

        </RadioGroup>
        <ImageView
            android:id="@+id/iv_add_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/personal_margin"
            android:src="@drawable/icon_add"

             />
    </RelativeLayout>
    <View
       style="@style/horizontal_divider_line"
        />
    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>



</LinearLayout>