<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/color_white"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/inter_space">

        <FrameLayout
            android:layout_width="@dimen/limit_grab_item_img_width"
            android:layout_height="@dimen/limit_grab_item_img_width">

            <com.xmd.technician.widget.RoundImageView
                android:id="@+id/once_card_head"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/img_default_square"
                app:borderRadius="@dimen/limit_grab_item_img_radius"
                app:type="round"/>

            <TextView
                android:id="@+id/once_card_mark_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/once_card_mark_new"
                android:paddingBottom="2dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="2dp"
                android:text="最新"
                android:textColor="@color/color_white"
                android:textSize="@dimen/fontRemark"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/once_card_mark_favorable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/once_card_mark_favorable"
                android:paddingBottom="2dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="2dp"
                android:text="最优惠"
                android:textColor="@color/color_white"
                android:textSize="@dimen/fontRemark"
                android:visibility="visible"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_space"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/once_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorHead"
                    android:textSize="@dimen/fontSize"
                    tools:text="泰式按摩"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_space"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/once_card_credit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBody"
                    android:textSize="@dimen/fontBiggerThanNormal"
                    tools:text="套餐：买10送4、买6送2"/>

            </LinearLayout>

            <TextView
                android:id="@+id/once_card_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_space"
                android:textColor="@color/colorBtnChecked"
                android:textSize="@dimen/fontBiggerThanNormal"
                android:visibility="visible"
                tools:text="提成：1元、5元"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/once_card_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/small_space"
                android:gravity="center"
                android:textColor="@color/colorBody"
                android:textSize="@dimen/fontTitle_small"
                tools:text="66元"/>

            <Button
                android:id="@+id/once_card_share"
                style="@style/share_btn_style"
                android:layout_marginTop="15dp"
                />
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/horizontal_divider_line"/>

</LinearLayout>