<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/normal_coupon_detail_activity_background_color"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/inter_space"
                android:background="@color/tab_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/inter_space">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/normal_coupon_detail_activity_share_text_title"
                    android:textColor="@color/normal_coupon_detail_activity_share_title_text_color"
                    android:textSize="@dimen/normal_coupon_detail_activity_share_title_text_size" />

                <TextView
                    android:id="@+id/tv_share_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/inter_space"
                    android:layout_marginTop="@dimen/small_space"
                    android:textColor="@color/normal_coupon_detail_activity_share_text_color"
                    android:textSize="@dimen/normal_coupon_detail_activity_share_text_text_size" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/inter_space"
                android:layout_marginRight="@dimen/inter_space"
                android:layout_marginTop="@dimen/inter_space"
                android:enabled="false"
                android:textSize="@dimen/normal_coupon_detail_activity_share_button_text_size"
                android:background="@drawable/selector_operation_positive_button_bg"
                android:text="@string/paid_coupon_detail_share"
                android:textColor="@color/selector_dialog_positive_button_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/inter_space"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:textSize="@dimen/normal_coupon_detail_activity_commission_text_size"
                    android:text="@string/normal_coupon_detail_activity_commission_desc"
                    android:textColor="@color/normal_coupon_detail_activity_commission_color" />

                <TextView
                    android:id="@+id/tv_commission"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:textSize="@dimen/normal_coupon_detail_activity_commission_amount_text_size"
                    android:textColor="@color/normal_coupon_detail_activity_commission_color" />

                <TextView
                    android:gravity="bottom"
                    android:textSize="@dimen/normal_coupon_detail_activity_commission_text_size"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/amount_unit_yuan"
                    android:textColor="@color/normal_coupon_detail_activity_commission_color" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/inter_space"
                android:background="@color/tab_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/large_space">

                <ImageView
                    android:id="@+id/iv_share_qr_code"
                    android:layout_width="@dimen/paid_coupon_detail_activity_qrcode_size"
                    android:layout_height="@dimen/paid_coupon_detail_activity_qrcode_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/large_space"
                    android:text="@string/normal_coupon_detail_activity_scan_code"
                    android:textColor="@color/paid_coupon_detail_activity_value_text_color"
                    android:textSize="@dimen/paid_coupon_detail_activity_consume_description_text_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/inter_space"
                android:background="@color/tab_bg"
                android:orientation="vertical"
                android:padding="@dimen/inter_space">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/inter_space"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/normal_coupon_detail_activity_tips_project" />

                    <TextView
                        android:id="@+id/tv_service_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/inter_space"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/normal_coupon_detail_activity_tips_time" />

                    <TextView
                        android:id="@+id/tv_coupon_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/inter_space"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/normal_coupon_detail_activity_act_content_desc" />

                    <WebView
                        android:id="@+id/wv_act_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small_space" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>