<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.xmd.technician.window.MainActivity">

    <LinearLayout
        android:id="@+id/main_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_button_height"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:paddingTop="@dimen/margin_5"
        android:background="@color/appColorTable"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/main_button_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawableTop="@drawable/home_new_bg"
                android:scaleType="centerInside"
                android:textColor="@color/home_button_text_bg"
                android:textSize="@dimen/fontRemark"
                android:text="@string/main_chat" />

            <TextView
                android:id="@+id/main_unread_message"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/search_pic_height"
                android:minWidth="@dimen/search_pic_height"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/personal_margin_table"
                android:background="@drawable/unread_count_bg"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/fontRemark"
                tools:text="11"
                android:visibility="invisible"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/main_button_contacts"
