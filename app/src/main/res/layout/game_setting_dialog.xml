<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/round_rect_white_bg"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每局筹码"
            android:textColor="@color/colorHead"
            android:textSize="19dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="26dp"
            />
        <View
           style="@style/horizontal_divider_line"
            android:layout_marginTop="26dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="34dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                >
                <TextView
                    android:id="@+id/comment_game_one"
                    style="@style/comment_game_integral_text_style"
                    android:text="1"
                    />
                <TextView
                    android:id="@+id/comment_game_ten"
                    style="@style/comment_game_integral_text_style"
                    android:text="10"
                    android:layout_marginRight="13dp"
                    android:layout_marginLeft="13dp"
                    />
                <TextView
                    android:id="@+id/comment_game_fifty"
                    style="@style/comment_game_integral_text_style"
                    android:text="50"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:layout_marginTop="18dp"
                >
                <TextView
                    android:id="@+id/comment_game_one_hundred"
                    style="@style/comment_game_integral_text_style"
                    android:text="100"
                    />
                <TextView
                    android:id="@+id/comment_game_five_hundred"
                    style="@style/comment_game_integral_text_style"
                    android:text="500"
                    android:layout_marginRight="13dp"
                    android:layout_marginLeft="13dp"
                    />
                <TextView
                    android:id="@+id/comment_game_ten_hundred"
                    style="@style/comment_game_integral_text_style"
                    android:text="1000"
                    />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_dice"
            android:layout_gravity="center"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="27dp"
            />
        <View
            style="@style/horizontal_divider_line"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_rule_introduce"
            android:layout_gravity="center"
            android:textColor="#999999"
            android:textSize="13sp"
            android:layout_marginTop="@dimen/margin_2"
            android:layout_marginBottom="23dp"
            />
        <View
            style="@style/horizontal_divider_line"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/dialog_alert_cancel_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/personal_item_height"
                android:layout_weight="1"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:textColor="@color/coupon_detail_text_color"
                android:textSize="@dimen/fontTitle"
                android:background="@null"
                android:text="@string/cancel"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/colorRemarkText"/>
            <Button
                android:id="@+id/dialog_alert_ok_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/personal_item_height"
                android:textColor="@color/colorBtnChecked"
                android:textSize="@dimen/fontTitle"
                android:background="@null"
                android:text="@string/game_invite"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>