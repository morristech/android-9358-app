<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:padding="@dimen/large_space">

        <TextView
            android:id="@+id/credit_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_25"
            android:textColor="@color/colorHead"
            android:textSize="@dimen/fontTitle" />

        <com.xmd.technician.widget.CircleImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/credit_head"
            android:layout_height="@dimen/credit_head"
            android:layout_below="@id/credit_from"
            android:layout_marginTop="@dimen/tab_indicator_text_padding"
            android:background="@drawable/icon22" />

        <TextView
            android:id="@+id/avatar_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/avatar"
            android:layout_marginLeft="@dimen/game_setting_integral_corner"
            android:layout_marginTop="@dimen/tab_indicator_text_padding"
            android:layout_toRightOf="@id/avatar"
            android:textColor="@color/indicator_selected_color"
            android:textSize="@dimen/fontNormal" />

        <TextView
            android:id="@+id/credit_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/avatar"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/margin_5"
            android:textColor="@color/indicator_selected_color"
            android:textSize="@dimen/fontNormal" />

        <TextView
            android:id="@+id/credit_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/margin_2"
            android:textColor="@color/colorHead"
            android:textSize="@dimen/fontBody" />
    </RelativeLayout>

    <View style="@style/horizontal_divider_line" />

</LinearLayout>