<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/tv_pinyin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/contact_list_item_height"
        android:background="@color/main_bg"
        android:textColor="@color/contact_item_name_text_color"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/contact_list_padding_left"
        android:textSize="@dimen/fontTitle"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/order_detail_avatar_section_height"
        android:background="@color/color_white"
        android:orientation="horizontal"
        >
        <com.xmd.technician.widget.CircleImageView
            android:id="@+id/customer_head"
            android:layout_width="@dimen/photo_head"
            android:layout_height="@dimen/photo_head"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/search_margin"
            android:background="@drawable/icon22"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/contact_item_hight"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_right_10"
            android:layout_gravity="center_vertical"
            >
            <TextView
                android:id="@+id/customer_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/contact_item_name_text_color"
                android:textSize="@dimen/fontHead"
                />
            <LinearLayout
                android:id="@+id/line_chat"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_5"
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/customer_serialNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_can_chat"
                    android:layout_marginRight="@dimen/margin_5"
                    android:layout_marginLeft="@dimen/margin_2"
                    android:textSize="@dimen/fontTitle"
                    android:text="@string/text_can_chat"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <View
        style="@style/horizontal_divider_line"></View>

</LinearLayout>