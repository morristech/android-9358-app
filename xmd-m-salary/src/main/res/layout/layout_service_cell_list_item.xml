<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="@dimen/excel_cell_width"
                android:layout_height="@dimen/excel_cell_height"
                android:orientation="vertical">
    <TextView
        android:id="@+id/tv_cell_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="#212121"
        android:textSize="12sp"
        android:background="@drawable/selector_excel_item_bg"
        tools:text="10"/>
    <View android:layout_width="match_parent" android:layout_height="0.5dp"
          android:layout_alignParentBottom="true"
          android:background="#E0E0E0"/>

</RelativeLayout>