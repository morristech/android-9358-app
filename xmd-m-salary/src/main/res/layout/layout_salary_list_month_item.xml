<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/selector_bg_white"
        android:paddingLeft="23dp"
        android:paddingRight="12dp">
        <View
            android:id="@+id/mark"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_circular_bg"/>

        <TextView
            android:id="@+id/tv_get_salary_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/mark"
            android:paddingLeft="6dp"
            android:textColor="#333333"
            android:textSize="15sp"
            tools:text="2017.09.27"/>

        <TextView
            android:id="@+id/tv_get_salary_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/mark"
            android:gravity="right"
            android:drawableRight="@drawable/icon_right_allow"
            android:drawablePadding="@dimen/small_padding"
            android:paddingLeft="6dp"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="+68.59"/>

    </RelativeLayout>
    <View style="@style/horizontal_divider_line"/>
</LinearLayout>
