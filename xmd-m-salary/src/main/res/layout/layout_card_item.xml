<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_excel_item_bg"
        android:orientation="horizontal">
        <LinearLayout android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:layout_weight="1"
                      android:gravity="center_vertical"
                      android:orientation="vertical"
                      android:padding="@dimen/excel_text_padding">
            <TextView
                android:id="@+id/tv_card_type_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@color/excel_item_name_color"
                android:textSize="@dimen/excel_text_title"
                android:textStyle="bold"
                tools:text="果盘"/>
            <TextView
                android:id="@+id/tv_card_type_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:textColor="@color/excel_item_name_color"
                android:textSize="@dimen/excel_text_name"
                tools:text="果盘"/>
        </LinearLayout>


        <LinearLayout android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:layout_weight="1.5"
                      android:gravity="center_vertical"
                      android:orientation="vertical"
                      android:padding="@dimen/excel_text_padding">
            <TextView
                android:id="@+id/tv_card_detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/excel_item_name_color"
                android:textSize="@dimen/excel_text_title"
                android:visibility="gone"
                tools:text="果盘"/>
            <TextView
                android:id="@+id/tv_card_item_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:textColor="@color/excel_item_name_color"
                android:textSize="@dimen/excel_text_name"
                tools:text="项目：k歌沐浴dasfasdfasdfasdfasdfasdfasdfasdf"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_commodities_commission"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/excel_text_padding"
            android:textColor="@color/excel_item_commission_color"
            android:textSize="@dimen/excel_text_commission"
            tools:text="5"/>
    </LinearLayout>

    <View style="@style/horizontal_divider_line"/>

</LinearLayout>