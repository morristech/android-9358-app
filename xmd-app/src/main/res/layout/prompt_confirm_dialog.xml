<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_round_rect_white_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_alert_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#212121"
        android:textSize="18sp"
        android:gravity="bottom|center_horizontal"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/dialog_alert_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|top"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="#616161"
        android:textSize="16dp"
        android:lineSpacingExtra="10dp"
        android:layout_marginTop="12dp" />

    <View
        android:id="@+id/reset_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="#E0E0E0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_alert_cancel_btn"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:textColor="#424242"
            android:textSize="16sp"
            android:background="@null"
            android:gravity="center"
            android:text="取消" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#E0E0E0" />

        <Button
            android:id="@+id/dialog_alert_ok_btn"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:textColor="#fb5549"
            android:textSize="16sp"
            android:background="@null"
            android:gravity="center"
            android:text="确定" />
    </LinearLayout>

</LinearLayout>