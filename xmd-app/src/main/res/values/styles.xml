<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textSize">@dimen/fontBody</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>

        <item name="android:editTextStyle">@style/AppTheme.EditText</item>
    </style>

    <style name="AppTheme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.Dialog.Alert">
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="AppTheme.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">

    </style>

    <!-- 按钮样式 -->
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">

    </style>

    <style name="AppTheme.Button.Main">
        <item name="android:background">@drawable/btn_main</item>
        <item name="android:textColor">@color/colorBtnMainText</item>
    </style>

    <style name="AppTheme.Button.Plain">
        <item name="android:background">@drawable/btn_plain</item>
        <item name="android:textColor">@color/colorBtnPlainText</item>
    </style>

    <style name="AppTheme.Button.Mini">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
    </style>

    <style name="AppTheme.Button.Mini.Green">
        <item name="android:background">@drawable/btn_mini_green</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.Button.Mini.Check">
        <item name="android:background">@drawable/btn_check_gray_green</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:button">@null</item>
    </style>

    <style name="default_dialog_style" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/shape_round_rect_white_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- edit text -->
    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:padding">4dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:background">@drawable/shape_bg_edit_text</item>
    </style>
</resources>
