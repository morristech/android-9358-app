<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_main_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scroll_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/layout_verify_head" />

                <RelativeLayout
                    android:id="@+id/layout_main_cashier"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_normal_margin"
                    android:layout_marginRight="@dimen/activity_normal_margin"
                    android:layout_marginTop="@dimen/activity_normal_margin"
                    android:background="@drawable/bg_area_item"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingTop="@dimen/activity_vertical_margin">

                    <ImageView
                        android:id="@+id/img_main_cashier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/ic_main_cashier" />

                    <ImageView
                        android:id="@+id/img_main_cashier_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_arrow" />

                    <TextView
                        android:id="@+id/tv_main_cashier_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/img_main_cashier_arrow"
                        android:layout_toRightOf="@id/img_main_cashier"
                        android:text="收银"
                        android:textColor="@color/colorText4"
                        android:textSize="@dimen/medium_font_size" />

                    <TextView
                        android:id="@+id/tv_main_cashier_sub_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_main_cashier_title"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_toLeftOf="@id/img_main_cashier_arrow"
                        android:layout_toRightOf="@id/img_main_cashier"
                        android:text="微信支付"
                        android:textColor="@color/colorText3"
                        android:textSize="@dimen/font_size_16" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_main_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_normal_margin"
                    android:layout_marginRight="@dimen/activity_normal_margin"
                    android:layout_marginTop="@dimen/activity_normal_margin"
                    android:background="@drawable/bg_area_item"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingTop="@dimen/activity_vertical_margin">

                    <ImageView
                        android:id="@+id/img_main_order"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/ic_main_order" />

                    <ImageView
                        android:id="@+id/img_main_order_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_arrow" />

                    <TextView
                        android:id="@+id/tv_main_order_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/img_main_order_arrow"
                        android:layout_toRightOf="@id/img_main_order"
                        android:singleLine="true"
                        android:text="预约订单"
                        android:textColor="@color/colorText4"
                        android:textSize="@dimen/medium_font_size" />

                    <TextView
                        android:id="@+id/tv_main_order_sub_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_main_order_title"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_toLeftOf="@id/img_main_order_arrow"
                        android:layout_toRightOf="@id/img_main_order"
                        android:singleLine="true"
                        android:text="接单、出票"
                        android:textColor="@color/colorText3"
                        android:textSize="@dimen/font_size_16" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_main_online_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_normal_margin"
                    android:layout_marginRight="@dimen/activity_normal_margin"
                    android:layout_marginTop="@dimen/activity_normal_margin"
                    android:background="@drawable/bg_area_item"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingTop="@dimen/activity_vertical_margin">

                    <ImageView
                        android:id="@+id/img_main_online_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/ic_main_pay" />

                    <ImageView
                        android:id="@+id/img_main_online_pay_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_arrow" />

                    <TextView
                        android:id="@+id/tv_main_online_pay_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/img_main_online_pay_arrow"
                        android:layout_toRightOf="@id/img_main_online_pay"
                        android:singleLine="true"
                        android:text="小摩豆买单"
                        android:textColor="@color/colorText4"
                        android:textSize="@dimen/medium_font_size" />

                    <TextView
                        android:id="@+id/tv_main_online_pay_sub_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_main_online_pay_title"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_toLeftOf="@id/img_main_online_pay_arrow"
                        android:layout_toRightOf="@id/img_main_online_pay"
                        android:singleLine="true"
                        android:text="明细、补打小票"
                        android:textColor="@color/colorText3"
                        android:textSize="@dimen/font_size_16" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/layout_main_record"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_normal_margin"
                    android:layout_marginRight="@dimen/activity_normal_margin"
                    android:layout_marginTop="@dimen/activity_normal_margin"
                    android:background="@drawable/bg_area_item"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingTop="@dimen/activity_vertical_margin">

                    <ImageView
                        android:id="@+id/img_main_record"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/ic_main_record" />

                    <ImageView
                        android:id="@+id/img_main_record_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_arrow" />

                    <TextView
                        android:id="@+id/tv_main_record_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/img_main_record_arrow"
                        android:layout_toRightOf="@id/img_main_record"
                        android:singleLine="true"
                        android:text="对账"
                        android:textColor="@color/colorText4"
                        android:textSize="@dimen/medium_font_size" />

                    <TextView
                        android:id="@+id/tv_main_record_sub_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_main_record_title"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_toLeftOf="@id/img_main_record_arrow"
                        android:layout_toRightOf="@id/img_main_record"
                        android:singleLine="true"
                        android:text="收银记录、结算、核销记录"
                        android:textColor="@color/colorText3"
                        android:textSize="@dimen/font_size_16" />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_main" />
    </RelativeLayout>

    <include
        layout="@layout/drawer_view"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start" />

</android.support.v4.widget.DrawerLayout>
