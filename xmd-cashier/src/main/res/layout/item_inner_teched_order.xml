<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item_order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_little_margin"
    android:background="@drawable/bg_area_unselect"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_item_order_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_little_margin"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_inner_time"
        android:drawablePadding="@dimen/activity_little_margin"
        android:paddingLeft="@dimen/activity_normal_margin"
        android:paddingRight="@dimen/activity_normal_margin"
        android:textColor="@color/colorText3"
        android:textSize="@dimen/font_size_14" />

    <View
        android:id="@+id/view_divide_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorStoke" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/activity_little_margin">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/activity_little_margin">

            <TextView
                android:id="@+id/tv_item_order_room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText2"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/tv_item_order_seat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_little_margin"
                android:textColor="@color/colorText2"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/tv_item_order_identify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_little_margin"
                android:textColor="@color/colorText2"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_item_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/activity_normal_margin"
            android:layout_marginRight="@dimen/activity_normal_margin"
            android:src="@drawable/ic_order_unselect" />
    </LinearLayout>
</LinearLayout>