<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_little_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/activity_normal_margin"
            android:layout_height="@dimen/activity_normal_margin"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/shape_bg_dot" />

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="357dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="@color/colorText2"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/tv_item_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:singleLine="true"
            android:textColor="@color/colorText2"
            android:textSize="@dimen/font_size_14"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_item_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_little_margin">

        <TextView
            android:id="@+id/tv_item_tech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/activity_normal_margin"
            android:textColor="@color/colorText2"
            android:textSize="@dimen/font_size_14"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_item_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:minWidth="48dp"
            android:singleLine="true"
            android:textColor="@color/colorBlueLight"
            android:textSize="@dimen/font_size_14"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>