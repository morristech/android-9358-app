<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_status"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="@dimen/activity_normal_margin"
            android:src="@drawable/ic_scan_ok" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付成功"
            android:textColor="@color/colorText5"
            android:textSize="@dimen/head_font_size" />

        <TextView
            android:id="@+id/tv_status_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_little_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:textColor="@color/colorPink"
            android:textSize="@dimen/font_size_14" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingBottom="@dimen/activity_small_margin"
        android:paddingLeft="@dimen/activity_normal_margin"
        android:paddingRight="@dimen/activity_normal_margin"
        android:paddingTop="@dimen/activity_small_margin"
        android:textSize="@dimen/font_size_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorStoke" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_pay_print"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_normal_margin"
            android:layout_weight="1"
            android:background="@drawable/state_btn_gray"
            android:gravity="center"
            android:text="打印"
            android:textColor="@color/colorText3"
            android:textSize="@dimen/small_font_size"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_pay_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_normal_margin"
            android:layout_weight="1"
            android:background="@drawable/state_btn_green_dark"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/small_font_size" />

    </LinearLayout>
</LinearLayout>