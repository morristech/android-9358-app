<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_area_white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_discount_coupon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/activity_normal_margin"
        android:layout_marginTop="@dimen/activity_normal_margin"
        android:text="券详情"
        android:textColor="@color/colorText4"
        android:textSize="@dimen/small_font_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorStoke" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_normal_margin"
            android:paddingRight="@dimen/activity_normal_margin">

            <TextView
                android:id="@+id/tv_coupon_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_little_margin"
                android:layout_marginTop="@dimen/activity_little_margin"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/font_size_16" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/activity_small_margin">

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:text="券编码"
                        android:textColor="@color/colorText3"
                        android:textSize="@dimen/font_size_16" />

                    <TextView
                        android:id="@+id/tv_coupon_no"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/colorText4"
                        android:textSize="@dimen/font_size_16" />

                    <TextView />
                </TableRow>

                <TableRow android:layout_marginTop="@dimen/activity_little_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:text="核销码"
                        android:textColor="@color/colorText3"
                        android:textSize="@dimen/font_size_16" />

                    <TextView
                        android:id="@+id/tv_coupon_code"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/colorText4"
                        android:textSize="@dimen/font_size_16" />

                    <TextView />
                </TableRow>


                <TableRow android:layout_marginTop="@dimen/activity_little_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:text="券类型"
                        android:textColor="@color/colorText3"
                        android:textSize="@dimen/font_size_16" />

                    <TextView
                        android:id="@+id/tv_coupon_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/colorText4"
                        android:textSize="@dimen/font_size_16" />

                    <TextView />
                </TableRow>

                <TableRow android:layout_marginTop="@dimen/activity_little_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:text="限定项目"
                        android:textColor="@color/colorText3"
                        android:textSize="@dimen/font_size_16" />

                    <TextView
                        android:id="@+id/tv_coupon_service"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/colorText4"
                        android:textSize="@dimen/font_size_16" />

                    <TextView />
                </TableRow>

                <TableRow android:layout_marginTop="@dimen/activity_little_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:text="可用时段"
                        android:textColor="@color/colorText3"
                        android:textSize="@dimen/font_size_16" />

                    <TextView
                        android:id="@+id/tv_coupon_use_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/colorText4"
                        android:textSize="@dimen/font_size_16" />

                    <TextView />
                </TableRow>
            </TableLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/activity_small_margin"
                android:background="@color/colorStoke" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_area_white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/activity_little_margin"
                    android:paddingTop="@dimen/activity_little_margin"
                    android:text="使用说明"
                    android:textColor="@color/colorText4"
                    android:textSize="@dimen/font_size_16" />

                <WebView
                    android:id="@+id/wb_act_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:ignore="WebViewLayout" />

                <TextView
                    android:id="@+id/tv_act_content_null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_little_margin"
                    android:text="无"
                    android:textColor="@color/colorText2"
                    android:textSize="@dimen/font_size_14"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorStoke" />

    <Button
        android:id="@+id/btn_return"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/activity_small_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_small_margin"
        android:background="@drawable/state_btn_normal"
        android:text="返回"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/small_font_size" />
</LinearLayout>