<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:id="@+id/layout_member_recharge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_normal_margin"
        android:layout_marginRight="@dimen/activity_normal_margin"
        android:layout_marginTop="@dimen/activity_normal_margin"
        android:background="@drawable/bg_area_item"
        android:clickable="true"
        android:onClick="onClickRecharge"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_member_recharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_member_recharge" />

        <ImageView
            android:id="@+id/img_member_recharge_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_arrow" />

        <TextView
            android:id="@+id/tv_member_recharge_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/img_member_recharge_arrow"
            android:layout_toRightOf="@id/img_member_recharge"
            android:text="会员充值"
            android:textColor="@color/colorText4"
            android:textSize="@dimen/medium_font_size" />

        <TextView
            android:id="@+id/tv_member_recharge_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_member_recharge_title"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_toLeftOf="@id/img_member_recharge_arrow"
            android:layout_toRightOf="@id/img_member_recharge"
            android:text="现有会员充值卡片"
            android:textColor="@color/colorText3"
            android:textSize="@dimen/font_size_16" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_member_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_normal_margin"
        android:layout_marginRight="@dimen/activity_normal_margin"
        android:layout_marginTop="@dimen/activity_normal_margin"
        android:background="@drawable/bg_area_item"
        android:clickable="true"
        android:onClick="onClickCard"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_member_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_member_card" />

        <ImageView
            android:id="@+id/img_member_card_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_arrow" />

        <TextView
            android:id="@+id/tv_member_card_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/img_member_card_arrow"
            android:layout_toRightOf="@id/img_member_card"
            android:text="开卡"
            android:textColor="@color/colorText4"
            android:textSize="@dimen/medium_font_size" />

        <TextView
            android:id="@+id/tv_member_card_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_member_card_title"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_toLeftOf="@id/img_member_card_arrow"
            android:layout_toRightOf="@id/img_member_card"
            android:text="新会员开户"
            android:textColor="@color/colorText3"
            android:textSize="@dimen/font_size_16" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_member_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_normal_margin"
        android:layout_marginRight="@dimen/activity_normal_margin"
        android:layout_marginTop="@dimen/activity_normal_margin"
        android:background="@drawable/bg_area_item"
        android:clickable="true"
        android:onClick="onClickPayment"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/img_member_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_member_payment" />

        <ImageView
            android:id="@+id/img_member_payment_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_arrow" />

        <TextView
            android:id="@+id/tv_member_payment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/img_member_payment_arrow"
            android:layout_toRightOf="@id/img_member_payment"
            android:text="消费结账"
            android:textColor="@color/colorText4"
            android:textSize="@dimen/medium_font_size" />

        <TextView
            android:id="@+id/tv_member_payment_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_member_payment_title"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_toLeftOf="@id/img_member_payment_arrow"
            android:layout_toRightOf="@id/img_member_payment"
            android:text="接单、出票、核销"
            android:textColor="@color/colorText3"
            android:textSize="@dimen/font_size_16" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_member_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_normal_margin"
        android:layout_marginRight="@dimen/activity_normal_margin"
        android:layout_marginTop="@dimen/activity_normal_margin"
        android:background="@drawable/bg_area_item"
        android:clickable="true"
        android:onClick="onClickRecord"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/img_member_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_member_record" />

        <ImageView
            android:id="@+id/img_member_record_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_arrow" />

        <TextView
            android:id="@+id/tv_member_record_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/img_member_record_arrow"
            android:layout_toRightOf="@id/img_member_record"
            android:text="账户记录"
            android:textColor="@color/colorText4"
            android:textSize="@dimen/medium_font_size" />

        <TextView
            android:id="@+id/tv_member_record_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_member_record_title"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_toLeftOf="@id/img_member_record_arrow"
            android:layout_toRightOf="@id/img_member_record"
            android:text="明细、补打小票"
            android:textColor="@color/colorText3"
            android:textSize="@dimen/font_size_16" />
    </RelativeLayout>
</LinearLayout>