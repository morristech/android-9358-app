<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/settle_total_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textColor="@color/colorText2"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/settle_refund_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_normal_margin"
        android:gravity="right"
        android:textColor="@color/colorText2"
        android:textSize="@dimen/font_size_14"
        android:visibility="gone" />

    <TextView
        android:id="@+id/settle_start_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_normal_margin"
        android:gravity="right"
        android:textColor="@color/colorText2"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/settle_end_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_normal_margin"
        android:gravity="right"
        android:textColor="@color/colorText2"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/settle_cashier_people"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_normal_margin"
        android:gravity="right"
        android:textColor="@color/colorText2"
        android:textSize="@dimen/font_size_14"
        android:visibility="gone" />

    <TextView
        android:id="@+id/settle_js_people"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_normal_margin"
        android:gravity="right"
        android:textColor="@color/colorText2"
        android:textSize="@dimen/font_size_14"
        android:visibility="gone" />

    <TextView
        android:id="@+id/settle_js_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_normal_margin"
        android:gravity="right"
        android:textColor="@color/colorText2"
        android:textSize="@dimen/font_size_14"
        android:visibility="gone" />
</LinearLayout>