<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_normal_margin">

            <TextView
                android:id="@+id/tv_origin_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="消费金额："
                android:textColor="@color/colorText2"
                android:textSize="@dimen/small_font_size" />

            <TextView
                android:id="@+id/tv_origin_yuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text=" 元"
                android:textColor="@color/colorText4"
                android:textSize="@dimen/small_font_size" />

            <TextView
                android:id="@+id/tv_inner_origin_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_origin_yuan"
                android:layout_toRightOf="@id/tv_origin_text"
                android:gravity="right"
                android:textColor="@color/colorText4"
                android:textSize="@dimen/small_font_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_discount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="减免金额："
                android:textColor="@color/colorText2"
                android:textSize="@dimen/small_font_size" />

            <TextView
                android:id="@+id/tv_discount_yuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text=" 元"
                android:textColor="@color/colorText4"
                android:textSize="@dimen/small_font_size" />

            <TextView
                android:id="@+id/tv_inner_discount_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_discount_yuan"
                android:layout_toRightOf="@id/tv_discount_text"
                android:gravity="right"
                android:textColor="@color/colorButton"
                android:textSize="@dimen/small_font_size" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/bg_line_dot"
        android:layerType="software"
        android:visibility="gone" />

    <ViewStub
        android:id="@+id/stub_member_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout="@layout/layout_member_cashier"
        android:visibility="gone" />

    <ViewStub
        android:id="@+id/stub_mark_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout="@layout/layout_mark_cashier"
        android:visibility="gone" />

    <ViewStub
        android:id="@+id/stub_scan_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/layout_scan_cashier"
        android:visibility="gone" />
</LinearLayout>