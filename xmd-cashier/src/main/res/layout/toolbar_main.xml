<?xml version="1.0" encoding="utf-8"?>
<com.xmd.cashier.widget.CustomToolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/transparent"
    android:elevation="4dp"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    <com.xmd.cashier.widget.CircleImageView
        android:id="@+id/img_main_club"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_club" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/colorWhite"
        android:singleLine="true"
        android:textSize="@dimen/medium_font_size" />
</com.xmd.cashier.widget.CustomToolbar>