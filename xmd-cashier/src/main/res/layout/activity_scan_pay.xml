<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@drawable/bg_area_white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_normal_margin">

            <TextView
                android:id="@+id/tv_origin_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="消费金额："
                android:textColor="@color/colorText2"
                android:textSize="@dimen/small_font_size" />

            <TextView
                android:id="@+id/tv_origin_yuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text=" 元"
                android:textColor="@color/colorText4"
                android:textSize="@dimen/small_font_size" />

            <TextView
                android:id="@+id/tv_pay_origin_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_origin_yuan"
                android:layout_toRightOf="@id/tv_origin_text"
                android:gravity="right"
                android:textColor="@color/colorText4"
                android:textSize="@dimen/small_font_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_discount_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="减免金额："
                android:textColor="@color/colorText2"
                android:textSize="@dimen/small_font_size" />

            <TextView
                android:id="@+id/tv_discount_yuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text=" 元"
                android:textColor="@color/colorText4"
                android:textSize="@dimen/small_font_size" />

            <TextView
                android:id="@+id/tv_pay_discount_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_discount_yuan"
                android:layout_toRightOf="@id/tv_discount_desc"
                android:gravity="right"
                android:textColor="@color/colorButton"
                android:textSize="@dimen/small_font_size" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginBottom="@dimen/activity_normal_margin"
            android:layout_marginTop="@dimen/activity_normal_margin"
            android:background="@drawable/bg_line_dot"
            android:layerType="software" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_normal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="实收金额："
                android:textColor="@color/colorText2"
                android:textSize="@dimen/small_font_size" />

            <TextView
                android:id="@+id/tv_pay_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="查看买单活动"
                android:textColor="@color/colorText2"
                android:textSize="@dimen/font_size_14"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_pay_paid_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorText4"
            android:textSize="@dimen/medium_font_size" />

        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_scan_qrcode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/layout_qrcode_loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ProgressBar
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_qrcode_error"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_load_nonetwork" />

                <TextView
                    android:id="@+id/tv_qrcode_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:text="生成二维码失败"
                    android:textColor="@color/colorText3"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/tv_qrcode_refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/state_btn_reload"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingBottom="6dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:paddingTop="6dp"
                    android:text="刷新"
                    android:textColor="@color/colorText3" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_scan_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/activity_normal_margin"
                android:src="@drawable/ic_scan_method"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/ly_scan_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bg_area_dark"
                android:padding="@dimen/activity_normal_margin"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/img_scan_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_normal_margin"
                    android:src="@drawable/ic_scan_ok" />

                <TextView
                    android:id="@+id/tv_scan_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_small_margin"
                    android:layout_toRightOf="@id/img_scan_ok"
                    android:text="成功扫描"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_size_16" />

                <TextView
                    android:id="@+id/tv_scan_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_scan_title"
                    android:layout_toRightOf="@id/img_scan_ok"
                    android:text="请在手机点击立即支付"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/font_size_13" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:autoLink="all"
            android:padding="@dimen/activity_normal_margin"
            android:text="取消交易"
            android:textColor="@color/colorText4"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_qrcode_expire_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="二维码五分钟内有效，请尽快完成买单"
        android:textColor="@color/colorText3"
        android:textSize="@dimen/font_size_14"
        android:visibility="gone" />

</LinearLayout>