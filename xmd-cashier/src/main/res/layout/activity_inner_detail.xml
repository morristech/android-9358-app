<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0000000"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        app:layout_heightPercent="70%"
        app:layout_widthPercent="100%">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:padding="@dimen/activity_normal_margin"
            android:text="订单详情"
            android:textColor="@color/colorText4"
            android:textSize="@dimen/small_font_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorStoke" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_order_detail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/activity_little_margin"
            android:paddingRight="@dimen/activity_little_margin" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorStoke" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_little_margin"
            android:layout_marginTop="@dimen/activity_little_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="right"
                android:text="订单金额："
                android:textColor="@color/colorText2"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/tv_origin_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textColor="@color/colorText2"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_paid_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_little_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="right"
                android:text="预约抵扣："
                android:textColor="@color/colorText2"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/tv_paid_order_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textColor="@color/colorText2"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_paid_coupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_little_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="right"
                android:text="用券抵扣："
                android:textColor="@color/colorText2"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/tv_coupon_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textColor="@color/colorText2"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_paid_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_little_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="right"
                android:text="会员抵扣："
                android:textColor="@color/colorText2"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/tv_member_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textColor="@color/colorText2"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_paid_reduction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_little_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="right"
                android:text="直接减免："
                android:textColor="@color/colorText2"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/tv_reduction_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textColor="@color/colorText2"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_little_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="right"
                android:text="实收金额："
                android:textColor="@color/colorText2"
                android:textSize="@dimen/font_size_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_need_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textColor="@color/colorText2"
                android:textSize="@dimen/font_size_16"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorAccent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_order_negative"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="@dimen/activity_normal_margin"
                android:paddingTop="@dimen/activity_normal_margin"
                android:text="取消"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/small_font_size" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/colorAccent" />

            <TextView
                android:id="@+id/tv_order_positive"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="@dimen/activity_normal_margin"
                android:paddingTop="@dimen/activity_normal_margin"
                android:text="确认"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/small_font_size" />
        </LinearLayout>
    </LinearLayout>
</android.support.percent.PercentRelativeLayout>