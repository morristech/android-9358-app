<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/lv_sheet_contents"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_weight="1"
        android:background="@drawable/bg_area_white"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@color/colorStoke"
        android:dividerHeight="1px"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" />

    <TextView
        android:id="@+id/tv_sheet_cancel"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="@dimen/activity_normal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_normal_margin"
        android:background="@drawable/state_area_white"
        android:clickable="true"
        android:ellipsize="middle"
        android:gravity="center"
        android:lines="1"
        android:onClick="onClickCancel"
        android:text="@android:string/cancel"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/font_size_16"
        android:textStyle="bold" />
</LinearLayout>
