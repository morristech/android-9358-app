<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textSize">@dimen/small_font_size</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
    </style>

    <style name="AppTheme.EditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/colorHint</item>
    </style>

    <style name="AppTheme.Button">
        <item name="android:background">@drawable/state_btn_normal</item>
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
    </style>

    <style name="AppTheme.AlertDialogButton">
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:background">@null</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="AppTheme.Button.Negative">
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:background">@drawable/state_btn_negative</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="AppTheme.MoneyEditText">
        <item name="android:textSize">@dimen/head_font_size</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:background">@null</item>
    </style>

    <!-- PopWindow弹出动画 -->
    <style name="anim_top_to_bottom_style">
        <item name="android:windowEnterAnimation">@anim/slide_top_bottom_alpha_in</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom_top_alpha_out</item>
    </style>

    <!-- sheet dialog弹出动画 -->
    <style name="SheetAnimationAction" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/sheet_dialog_anim_fade_in</item>
        <item name="android:windowExitAnimation">@anim/sheet_dialog_anim_fade_out</item>
    </style>

    <!-- sheet dialog 样式-->
    <style name="SheetActionDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/SheetAnimationAction</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>
