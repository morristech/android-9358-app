<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAppBackground">

    <com.xmd.app.widget.StationaryScrollView
        android:id="@+id/stationary_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">
                <com.xmd.app.widget.RoundImageView
                    android:id="@+id/img_customer_head"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/img_default_avatar"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_customer_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#111111"
                            android:textSize="17sp"
                            tools:text="王先生" />

                        <ImageView
                            android:id="@+id/img_customer_type_01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/icon_contact_fans" />

                        <ImageView
                            android:id="@+id/img_customer_type_02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/icon_contact_wx" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_customer_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal"
                    android:visibility="invisible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="手机号："
                            android:textColor="#818181"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_customer_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textColor="#818181"
                            android:textSize="14sp"
                            tools:text="13137558109" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_customer_nick_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                    android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="昵称："
                            android:textColor="#818181"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_customer_nick_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:textColor="#818181"
                            android:textSize="14sp"
                            tools:text="符号" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#d9d9d9"/>

            <LinearLayout
                android:id="@+id/ll_label_and_mark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_customer_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10sp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/contact_remark"/>

                    <TextView
                        android:id="@+id/tv_customer_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:textColor="#ff9c0c"
                        android:textSize="15sp"
                        tools:text="爱聊天，怕热，水温高"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_customer_mark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="备注："
                        android:textColor="#666666"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tv_customer_mark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:textColor="#404040"
                        android:textSize="15sp"
                        tools:text="此处是用户备注信息"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#d9d9d9"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="#d9d9d9"/>

            <LinearLayout
                android:id="@+id/ll_customer_type_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="标签"
                    android:textColor="#666666"
                    android:textSize="15sp"/>

                <com.xmd.app.widget.FlowLayout
                    android:id="@+id/customer_type_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingRight="20dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#d9d9d9"/>

            <LinearLayout
                android:id="@+id/ll_customer_register_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="注册时间"
                    android:textColor="#666666"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tv_customer_register_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:textSize="14sp"
                    tools:text="2017-02-08　18：20"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_customer_visit_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="访问了我"
                    android:textColor="#666666"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tv_customer_visit_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:textSize="14sp"
                    tools:text="2017-02-08　18：20"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_customer_membership_grade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="会员等级"
                    android:textColor="#666666"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tv_customer_membership_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999999"
                    android:textSize="14sp"
                    tools:text="金卡会员"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#d9d9d9"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="#d9d9d9"/>

            <RelativeLayout
                android:id="@+id/rl_customer_comment"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/selector_bg_white"
                android:gravity="center_vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="全部评论"
                    android:textColor="#666666"
                    android:textSize="15sp"/>

                <ImageView
                    android:id="@+id/img_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_right"/>

                <TextView
                    android:id="@+id/tv_comment_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@id/img_right"
                    android:text="次"
                    android:textColor="#4d4d4d"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tv_comment_times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    android:layout_toLeftOf="@id/tv_comment_note"
                    android:textColor="#ff9a0c"
                    android:textSize="16sp"
                    tools:text="8"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#d9d9d9"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:background="#d9d9d9"/>

            <FrameLayout
                android:id="@+id/frame_consume_tech"
                android:layout_width="match_parent"
                android:layout_height="@dimen/consume_view_height"/>
        </LinearLayout>
    </com.xmd.app.widget.StationaryScrollView>


</LinearLayout>
