<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAppBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_customer_visit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_bg_white"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_customer_visit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2sp"
                android:src="@drawable/selector_customer_visit" />

            <TextView
                android:id="@+id/tv_customer_visit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/img_customer_visit"
                android:text="到店"
                android:textColor="@color/text_consume_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_customer_visit_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_customer_visit"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@id/img_customer_visit"
                android:text="8"
                android:textColor="@color/text_consume_number_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_customer_visit_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_customer_visit_times"
                android:layout_below="@id/img_customer_visit"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="5sp"
                android:layout_toRightOf="@id/tv_customer_visit_times"
                android:gravity="bottom"
                android:text="次"
                android:textColor="@color/text_consume_number_color"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            android:layout_width="0.5sp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="#cccccc" />

        <RelativeLayout
            android:id="@+id/rl_customer_consume"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_bg_white"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_customer_consume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2sp"
                android:src="@drawable/selector_customer_consume" />

            <TextView
                android:id="@+id/tv_customer_consume_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/img_customer_consume"
                android:text="消费"
                android:textColor="@color/text_consume_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_customer_consume_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_customer_consume"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"
                android:text="15110"
                android:textColor="@color/text_consume_number_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_customer_consume_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_customer_consume_money"
                android:layout_below="@id/img_customer_consume"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="5sp"
                android:layout_toRightOf="@id/tv_customer_consume_money"
                android:gravity="bottom"
                android:text="元"
                android:textColor="@color/text_consume_number_color"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            android:layout_width="0.5sp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="#cccccc" />

        <RelativeLayout
            android:id="@+id/rl_customer_reward_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_bg_white"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_customer_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2sp"
                android:src="@drawable/selector_customer_reward" />

            <TextView
                android:id="@+id/tv_customer_reward_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/img_customer_reward"
                android:text="打赏"
                android:textColor="@color/text_consume_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_customer_reward_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_customer_reward"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"
                android:text="15110"
                android:textColor="@color/text_consume_number_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_customer_reward_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_customer_reward_money"
                android:layout_below="@id/img_customer_reward"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="5sp"
                android:layout_toRightOf="@id/tv_customer_reward_money"
                android:gravity="bottom"
                android:text="次"
                android:textColor="@color/text_consume_number_color"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d9d9d9" />

    <android.support.v4.view.ViewPager
        android:id="@+id/customer_view_pager"
        android:layout_width="match_parent"
        android:layout_height="240dp" />

</LinearLayout>