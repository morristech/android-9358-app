<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAppBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <com.xmd.app.widget.RoundImageView
            android:id="@+id/img_customer_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/img_default_avatar" />

        <TextView
            android:id="@+id/tv_customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/img_customer_head"
            android:textColor="#111111"
            android:textSize="17sp"
            tools:text="王先生" />

        <ImageView
            android:id="@+id/img_customer_type_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_customer_name"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_customer_name"
            android:src="@drawable/icon_contact_fans" />

        <!--<ImageView-->
        <!--android:id="@+id/img_customer_type_02"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignBottom="@id/tv_customer_name"-->
        <!--android:layout_marginBottom="2dp"-->
        <!--android:layout_marginLeft="5dp"-->
        <!--android:layout_toRightOf="@id/img_customer_type_01"-->
        <!--android:src="@drawable/icon_contact_wx"/>-->

        <LinearLayout
            android:id="@+id/ll_customer_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_customer_name"
            android:layout_below="@id/tv_customer_name"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号："
                android:textColor="#818181"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_customer_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                tools:text="13137558109"
                android:textColor="#818181"
                android:textSize="14sp" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d9d9d9" />

    <LinearLayout
        android:id="@+id/ll_customer_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10sp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/contact_remark" />

        <TextView
            android:id="@+id/tv_customer_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textColor="#ff9c0c"
            android:textSize="15sp"
            tools:text="爱聊天，怕热，水温高" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_customer_mark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注："
            android:textColor="#666666"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_customer_mark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textColor="#404040"
            android:textSize="15sp"
            tools:text="此处是用户备注信息" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d9d9d9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#616161"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:text="提示:客人尚未注册,提醒用户注册." />

</LinearLayout>
