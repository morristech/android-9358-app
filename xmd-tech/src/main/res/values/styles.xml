<resources>

    <!-- Base application theme. -->
    <style name="Theme.App.Base" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <!-- Both of these are needed, hide the action bar -->
        <item name="toolbarStyle">@style/MyToolbar</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/colorBackground</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textSize">@dimen/fontBody2</item>
    </style>

    <style name="AppTheme" parent="Theme.App.Base">
        <item name="android:spinnerStyle">@style/default_spinner_style</item>
    </style>


    <style name="edit_activity_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorRemark</item>
        <item name="android:textSize">@dimen/fontBody</item>
    </style>

    <style name="edit_activity_edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/personal_margin</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/colorBody</item>
        <item name="android:textSize">@dimen/fontBody</item>
    </style>

    <style name="commentRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_bg</item>
        <item name="android:minHeight">@dimen/personal_padding</item>
        <item name="android:maxHeight">@dimen/personal_padding</item>
    </style>

    <style name="dialog_check_box_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dialog_multi_check_default_height</item>
        <item name="android:paddingLeft">@dimen/personal_margin</item>
        <item name="android:paddingRight">@dimen/personal_margin</item>
        <item name="android:button">@null</item>
        <item name="android:drawableRight">@drawable/check_box_style_selector</item>
        <item name="android:textSize">@dimen/fontTitle</item>
        <item name="android:textColor">@color/colorBody</item>
        <item name="android:background">@drawable/personal_item_selector</item>
    </style>

    <style name="default_dialog_style" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/round_rect_white_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="success_dialog_style" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/round_rect_white_lucency_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="dialog_qr" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="layout_share_coupon_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/default_button_background_selector</item>
        <item name="android:padding">@dimen/inter_space</item>
        <item name="android:layout_marginRight">@dimen/inter_space</item>
        <item name="android:layout_marginTop">@dimen/inter_space</item>
        <item name="android:visibility">gone</item>
    </style>
    <style name="coupon_type_style" parent="wh_wrap_content_layout">
        <item name="android:textColor">@color/colorHead</item>
        <item name="android:textSize">@dimen/fontHead</item>
        <item name="android:layout_marginLeft">@dimen/inter_space</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:paddingTop">@dimen/small_space</item>


    </style>
    <style name="coupon_total_style" parent="wh_wrap_content_layout">
        <item name="android:textColor">@color/colorHead</item>
        <item name="android:textSize">@dimen/fontBody</item>
        <item name="android:layout_marginLeft">@dimen/inter_space</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">@dimen/small_space</item>
        <item name="android:paddingBottom">@dimen/small_space</item>
    </style>
    <style name="coupon_total_num_style" parent="wh_wrap_content_layout">
        <item name="android:textColor">@color/text_color_yellow</item>
        <item name="android:textSize">@dimen/fontBody</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:paddingBottom">@dimen/small_space</item>
        <item name="android:layout_marginBottom">@dimen/small_space</item>
    </style>
    <!-- 时间选择控件 -->
    <style name="DateSelectView">
        <item name="android:background">@drawable/shape_rect_r4_gray</item>
        <item name="android:textColor">@color/colorHead</item>
        <item name="android:textSize">@dimen/fontBody2</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 按钮 -->
    <style name="AppButton" parent="Widget.AppCompat.Button">
        <item name="android:minHeight">32dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <!-- 红框按钮 -->
    <style name="RedStokeButton" parent="AppButton">
        <item name="android:background">@drawable/selector_red_stoke_button</item>
        <item name="android:textColor">@drawable/selector_red_white</item>
    </style>

    <declare-styleable name="EaseChatMessageList">
        <attr name="msgListMyBubbleBackground" format="reference"/>
        <attr name="msgListOtherBubbleBackground" format="reference"/>
        <attr name="msgListShowUserAvatar" format="boolean"/>
        <attr name="msgListShowUserNick" format="boolean"/>
    </declare-styleable>

    <style name="chat_text_date_style">
        <item name="android:padding">2dp</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:textColor">#c0c0c0</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/ease_timestampe_bg</item>
    </style>

    <style name="chat_text_name_style">
        <item name="android:textColor">#818181</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
