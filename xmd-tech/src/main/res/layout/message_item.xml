<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/color_white"
              android:orientation="vertical"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_space">

                <com.xmd.app.widget.CircleAvatarView
                    android:id="@+id/avatar"
                    android:layout_width="@dimen/avatar_head"
                    android:layout_height="@dimen/avatar_head"/>

                <TextView
                    android:id="@+id/unread"
                    android:layout_width="@dimen/large_space"
                    android:layout_height="@dimen/large_space"
                    android:layout_gravity="right|top"
                    android:background="@drawable/unread_count_bg"
                    android:gravity="center"
                    android:text="11"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/fontRemark"/>

            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_space"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
            >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_main_title"
                    />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/small_space"
                        android:layout_toRightOf="@id/name"
                        android:background="@drawable/chat_manager_type_bg"
                        android:paddingBottom="@dimen/two_space"
                        android:paddingLeft="@dimen/small_space"
                        android:paddingRight="@dimen/small_space"
                        android:paddingTop="@dimen/two_space"
                        android:text="@string/contact_manager"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/fontRemark"
                        android:visibility="gone"
                    />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/small_space"
                        android:layout_toRightOf="@id/name"
                        android:paddingBottom="@dimen/two_space"
                        android:paddingLeft="@dimen/small_space"
                        android:paddingRight="@dimen/small_space"
                        android:paddingTop="@dimen/two_space"
                        android:textColor="@color/color_main_title"
                        android:textSize="@dimen/fontRemark"
                        android:visibility="gone"
                    />
                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingRight="@dimen/inter_space"
                        android:textColor="@color/color_main_remark"
                    />
                </RelativeLayout>


                <TextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLength="36"
                    android:singleLine="true"
                    android:textColor="@color/color_main_remark"
                />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/two_space"
        android:background="@color/divider_thin_color"
    />

</LinearLayout>