<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/color_white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/fl_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_space">

                <com.xmd.technician.widget.CircleAvatarView
                    android:id="@+id/avatar"
                    android:layout_width="@dimen/avatar_head"
                    android:layout_height="@dimen/avatar_head" />

                <TextView
                    android:id="@+id/unread"
                    android:layout_width="@dimen/large_space"
                    android:layout_height="@dimen/large_space"
                    android:layout_gravity="right|top"
                    android:background="@drawable/unread_count_bg"
                    android:gravity="center"
                    android:textSize="@dimen/fontRemark"
                    android:text="11"
                    android:textColor="@android:color/white" />

            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="@dimen/small_space"
                >
             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                 <TextView
                     android:id="@+id/name"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:gravity="center_vertical"
                     android:textColor="@color/colorTitle"
                     />
                 <TextView
                     android:id="@+id/user_manager_type"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_toRightOf="@id/name"
                     android:layout_marginLeft="@dimen/margin_5"
                     android:text="@string/contact_manager"
                     android:textColor="@color/color_white"
                     android:background="@drawable/chat_manager_type_bg"
                     android:textSize="@dimen/fontRemark"
                     android:paddingBottom="@dimen/margin_2"
                     android:paddingTop="@dimen/margin_2"
                     android:paddingLeft="@dimen/margin_5"
                     android:paddingRight="@dimen/margin_5"
                     android:visibility="gone"
                     />
                 <TextView
                     android:id="@+id/user_tech_type"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_toRightOf="@id/name"
                     android:layout_marginLeft="@dimen/margin_5"
                     android:textColor="@color/colorTitle"
                     android:textSize="@dimen/fontRemark"
                     android:paddingBottom="@dimen/margin_2"
                     android:paddingTop="@dimen/margin_2"
                     android:paddingLeft="@dimen/margin_5"
                     android:paddingRight="@dimen/margin_5"
                     android:visibility="gone"
                     />
                 <TextView
                     android:id="@+id/time"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:paddingRight="@dimen/inter_space"
                     android:textColor="@color/colorRemark"
                     android:layout_alignParentRight="true"
                     />
             </RelativeLayout>



                <TextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxLength="36"
                    android:textColor="@color/colorRemark"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_marginTop="@dimen/margin_2"
    android:background="@color/divider_thin_color"
    />
