<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingTop="13dp">

    <TextView
        android:id="@+id/timestamp"
        style="@style/chat_text_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_space">

        <TextView
            android:id="@+id/tv_userid"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/inter_space"
            android:layout_toRightOf="@id/avatar"
            android:textSize="@dimen/fontBody"
            android:visibility="gone"/>

        <com.xmd.technician.widget.CircleAvatarView
            android:id="@+id/avatar"
            android:layout_width="@dimen/avatar_head"
            android:layout_height="@dimen/avatar_head"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/icon22"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/bubble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_userid"
            android:layout_marginLeft="@dimen/small_space"
            android:layout_toRightOf="@id/avatar"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/coupon_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/coupon_type_bg"
                        android:textColor="@color/text_color_yellow"
                        android:textSize="@dimen/fontRemark"/>

                    <TextView
                        android:id="@+id/coupon_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="end"
                        android:paddingRight="@dimen/margin_15"
                        android:text="@string/app_info_title"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/fontTitle"
                        />

                </RelativeLayout>

                <view
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/coupon_period"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:layout_marginTop="@dimen/margin_right_10"
                    android:ellipsize="end"
                    android:gravity="right|bottom"
                    android:paddingTop="@dimen/margin_5"
                    android:singleLine="true"
                    android:text="2106.3"
                    android:textColor="@color/colorRemark"
                    android:textSize="@dimen/fontRemark"/>
            </LinearLayout>

            <TextView
                android:id="@+id/paid_coupon_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/reward_tip_bg"
                android:drawableLeft="@drawable/tip_icon_coupon"
                android:drawablePadding="@dimen/personal_padding"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/margin_5"
                android:paddingLeft="@dimen/personal_padding"
                android:paddingRight="@dimen/personal_padding"
                android:paddingTop="@dimen/margin_5"
                android:textColor="@color/color_white"
                android:textSize="@dimen/fontRemark"/>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>