<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/main_page_margin_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/main_tech_dynamic_all"
        style="@style/relative_layout_title_style">

        <TextView
            style="@style/main_fragment_layout_title_left_style"
            android:drawableLeft="@drawable/icon_main_dynamic"
            android:text="@string/main_new_recent_status" />

        <TextView
            style="@style/main_fragment_layout_title_right_style"
            android:text="@string/main_tech_order_all" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/main_dynamic1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_2"
        android:paddingLeft="@dimen/inter_space"
        android:paddingRight="@dimen/inter_space"
        android:paddingTop="@dimen/margin_2"
        android:visibility="gone">

        <com.xmd.app.widget.CircleAvatarView
            android:id="@+id/main_dynamic_avatar1"
            android:layout_width="@dimen/main_dynamic_width"
            android:layout_height="@dimen/main_dynamic_width"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/search_margin"
            android:background="@drawable/icon22" />

        <TextView
            android:id="@+id/main_dynamic_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorHead"
            android:textSize="@dimen/fontBody" />

        <TextView
            android:id="@+id/main_dynamic_describe1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_weight="1"
            android:enabled="true"
            android:singleLine="true"
            android:textColor="@color/order_item_surplus_time_color"
            android:textSize="@dimen/fontBiggerThanNormal" />

        <TextView
            android:id="@+id/main_dynamic_time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/contact_info_unit"
            android:textSize="@dimen/fontBiggerThanRemark" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_dynamic2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_2"
        android:paddingLeft="@dimen/inter_space"
        android:paddingRight="@dimen/inter_space"
        android:paddingTop="@dimen/margin_2"
        android:visibility="gone">

        <com.xmd.app.widget.CircleAvatarView
            android:id="@+id/main_dynamic_avatar2"
            android:layout_width="@dimen/main_dynamic_width"
            android:layout_height="@dimen/main_dynamic_width"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/search_margin"
            android:background="@drawable/icon22" />

        <TextView
            android:id="@+id/main_dynamic_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorHead"
            android:textSize="@dimen/fontBody" />

        <TextView
            android:id="@+id/main_dynamic_describe2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_weight="1"
            android:enabled="true"
            android:singleLine="true"
            android:textColor="@color/order_item_surplus_time_color"
            android:textSize="@dimen/fontBiggerThanNormal" />

        <TextView
            android:id="@+id/main_dynamic_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/contact_info_unit"
            android:textSize="@dimen/fontBiggerThanRemark" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_dynamic3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_2"
        android:paddingLeft="@dimen/inter_space"
        android:paddingRight="@dimen/inter_space"
        android:paddingTop="@dimen/margin_2"
        android:visibility="gone">

        <com.xmd.app.widget.CircleAvatarView
            android:id="@+id/main_dynamic_avatar3"
            android:layout_width="@dimen/main_dynamic_width"
            android:layout_height="@dimen/main_dynamic_width"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/search_margin"
            android:background="@drawable/icon22" />

        <TextView
            android:id="@+id/main_dynamic_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorHead"
            android:textSize="@dimen/fontBody" />

        <TextView
            android:id="@+id/main_dynamic_describe3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_weight="1"
            android:enabled="true"
            android:singleLine="true"
            android:textColor="@color/order_item_surplus_time_color"
            android:textSize="@dimen/fontBiggerThanNormal" />

        <TextView
            android:id="@+id/main_dynamic_time3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/contact_info_unit"
            android:textSize="@dimen/fontBiggerThanRemark" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_visit_null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/margin_2"
        android:paddingTop="@dimen/margin_2">
        <View
            style="@style/horizontal_divider_line"/>

        <TextView
            android:id="@+id/main_dynamic_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/small_space"
            android:textColor="@color/list_item_label_color"
            android:textSize="@dimen/fontBody"
            android:text="@string/main_new_recent_status_none" />
    </RelativeLayout>
</LinearLayout>