<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingTop="13dp">

    <TextView
        android:id="@+id/timestamp"
        style="@style/chat_text_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/view_margin_left"
        android:paddingLeft="@dimen/chat_head_padding"
        android:layout_marginTop="@dimen/small_space">

        <com.xmd.technician.widget.CircleImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/avatar_head"
            android:layout_height="@dimen/avatar_head"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/icon22"/>

        <LinearLayout
            android:id="@+id/bubble"
            android:layout_width="@dimen/bubble_width"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_userid"
            android:layout_marginLeft="@dimen/small_space"
            android:layout_toRightOf="@id/avatar"
            android:background="@drawable/receive_order_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/order_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/personal_padding"
                android:layout_marginTop="@dimen/personal_padding"
                android:text="@string/app_info_title"
                android:textColor="@color/colorBody"
                android:textSize="@dimen/fontTitle"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/personal_padding">

                <TextView
                    android:id="@+id/order_time_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/personal_padding"
                    android:text="@string/app_info_title"
                    android:textColor="@color/colorBody"
                    android:textSize="@dimen/fontBody"/>

                <TextView
                    android:id="@+id/order_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/personal_padding"
                    android:text="@string/app_info_title"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/fontBody"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/personal_padding"
                android:layout_marginTop="@dimen/personal_padding">

                <TextView
                    android:id="@+id/order_service_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/personal_padding"
                    android:text="@string/app_info_title"
                    android:textColor="@color/colorBody"
                    android:textSize="@dimen/fontBody"/>

                <TextView
                    android:id="@+id/order_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/personal_padding"
                    android:text="@string/app_info_title"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/fontBody"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/order_menu_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_service"
                android:background="@drawable/bg"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/personal_padding"
                android:paddingRight="@dimen/personal_padding">

                <Button
                    android:id="@+id/order_accept"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/work_time_padding"
                    android:layout_weight="1"
                    android:background="@drawable/login_button_main_selector"
                    android:drawableLeft="@drawable/ic_baisegouxuan"
                    android:paddingLeft="@dimen/search_margin"
                    android:text="@string/accept"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/fontBody"/>

                <Button
                    android:id="@+id/order_refuse"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/work_time_padding"
                    android:layout_marginLeft="@dimen/personal_margin"
                    android:layout_weight="1"
                    android:background="@drawable/account_button_selector_bg"
                    android:drawableLeft="@drawable/ic_hongseguanbi"
                    android:gravity="center"
                    android:paddingLeft="@dimen/search_margin"
                    android:text="@string/refuse"
                    android:textColor="@color/colorBody"
                    android:textSize="@dimen/fontBody"/>
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_userid"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/inter_space"
            android:layout_toRightOf="@id/avatar"
            android:textSize="@dimen/fontBody"
            android:visibility="gone"/>
    </RelativeLayout>

</LinearLayout>