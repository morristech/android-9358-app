<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/color_white"
              android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tv_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/array_popup_window_item_height"
        android:background="@drawable/array_popup_window_item_bg"
        android:gravity="center"
        android:padding="@dimen/inter_space"
        android:lines="1"
        android:textColor="@color/array_popup_text_color"
        android:textSize="@dimen/fontBody"/>

    <View
        style="@style/line"
        android:layout_marginLeft="@dimen/small_space"
        android:layout_marginRight="@dimen/small_space"
        />


</LinearLayout>