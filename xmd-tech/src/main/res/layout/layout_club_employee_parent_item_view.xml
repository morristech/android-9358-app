<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="#efeff4"
        android:paddingBottom="@dimen/small_space"
        android:paddingRight="@dimen/small_space"
        android:paddingTop="@dimen/small_space">

        <TextView
            android:id="@+id/tv_market_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/inter_space"
            android:layout_weight="1"
            android:text="限时抢"
            android:textColor="#4d4d4d"
            android:textSize="15sp"/>

        <ImageView
            android:id="@+id/img_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/inter_space"
            android:src="@drawable/arrow_down"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#66C3C3C3"/>
</LinearLayout>