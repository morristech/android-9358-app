<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              style="@style/main_page_margin_style"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/color_white"
              android:orientation="vertical"
>
    <RelativeLayout
        android:id="@+id/main_tech_who_care_all"
        style="@style/relative_layout_title_style">
        <TextView
            style="@style/main_fragment_layout_title_left_style"
            android:drawableLeft="@drawable/icon_main_who_care"
            android:text="@string/main_who_care_me"/>
        <TextView
            style="@style/main_fragment_layout_title_right_style"
            android:text="@string/main_tech_order_all"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/layout_visitor_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/inter_space"
        android:paddingRight="@dimen/inter_space"
        android:visibility="gone"
    >


    </LinearLayout>

    <View
        style="@style/horizontal_divider_line"
        android:layout_marginTop="@dimen/two_space"/>
    <TextView
        android:id="@+id/main_who_care_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/small_space"
        android:paddingTop="@dimen/small_space"
        android:textColor="@color/list_item_label_color"
        android:textSize="@dimen/fontBody"
        tools:text="今天共有0人看了我～"
    />
</LinearLayout>