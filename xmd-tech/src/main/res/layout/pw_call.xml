<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/telephone"
        android:background="@color/tab_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/call_popup_window_phone_view_height"
        android:gravity="center"
        android:text="13760609008" />

    <Button
        android:id="@+id/call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_operation_positive_button_bg"
        android:text="@string/make_call"
        android:textColor="@color/selector_operation_positive_button_text" />

</LinearLayout>