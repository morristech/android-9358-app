<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="13dp">

        <TextView
            android:id="@+id/timestamp"
            style="@style/chat_text_date_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/view_margin_left"
            android:layout_marginTop="@dimen/small_space"
            android:paddingLeft="@dimen/chat_head_padding">

            <com.xmd.technician.widget.CircleAvatarView
                android:id="@+id/avatar"
                android:layout_width="@dimen/avatar_head"
                android:layout_height="@dimen/avatar_head"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/icon22" />

            <FrameLayout
                android:id="@+id/bubble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_userid"
                android:layout_marginLeft="@dimen/small_space"
                android:layout_toRightOf="@id/avatar"
                android:background="@drawable/recv_order_bg"
                android:minWidth="@dimen/bubble_width" />


            <TextView
                android:id="@+id/tv_userid"
                style="@style/chat_text_name_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/inter_space"
                android:layout_toRightOf="@id/avatar"
                android:text="xxxx"
                android:textSize="@dimen/fontBody"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>
</layout>
