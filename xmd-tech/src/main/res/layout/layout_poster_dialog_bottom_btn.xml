<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_poster_edit_or_save"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/color_white"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_save_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_dialog_save"
            android:drawablePadding="@dimen/small_space"
            android:paddingLeft="20dp"
            android:text="@string/tech_poster_save_picture"
            android:textColor="#4d4d4d"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_edit_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/icon_poster_edit"
            android:drawablePadding="@dimen/small_space"
            android:paddingRight="20dp"
            android:text="@string/tech_poster_edit"
            android:textColor="#4d4d4d"
            android:textSize="16sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_poster_edit_or_share"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/inter_space"
        android:paddingRight="@dimen/inter_space"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_poster_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tech_poster_edit_selector"
            android:gravity="center"
            android:padding="@dimen/small_space">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_poster_edit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/inter_space"
                android:text="@string/tech_poster_edit"
                android:textColor="#616161"
                android:textSize="16sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_poster_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_space"
            android:layout_weight="1"
            android:background="@drawable/tech_poster_share_selector"
            android:gravity="center"
            android:padding="@dimen/small_space">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_poster_share" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/inter_space"
                android:text="@string/tech_poster_share"
                android:textColor="#FF6666"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>