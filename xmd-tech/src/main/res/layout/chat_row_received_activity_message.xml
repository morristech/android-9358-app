<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingTop="13dp">

    <TextView
        android:id="@+id/timestamp"
        style="@style/chat_text_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/view_margin_left"
        android:layout_marginTop="@dimen/small_space">

        <com.xmd.technician.widget.CircleImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/avatar_head"
            android:layout_height="@dimen/avatar_head"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/icon22"/>
        <TextView
            android:id="@+id/tv_userid"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/inter_space"
            android:layout_toRightOf="@id/avatar"
            android:textSize="@dimen/fontBody"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_userid"
            android:layout_marginLeft="@dimen/small_space"
            android:layout_toRightOf="@id/avatar"
            android:gravity="center"
            android:background="@drawable/recv_order_bg">
            <ImageView
                android:id="@+id/iv_activity_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/icon_indiana"/>

            <TextView
                android:id="@+id/tv_activity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_space"
                android:layout_toRightOf="@id/iv_activity_icon"
                android:text="一元夺"
                android:textColor="@color/colorHead"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_activity_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_activity_title"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/iv_activity_icon"
                android:gravity="center|left"
                android:lineSpacingExtra="2dp"
                android:maxWidth="150dp"
                android:paddingLeft="@dimen/small_space"
                android:paddingRight="6dp"
                android:text="我和你只有一块钱的距离"
                android:textColor="#C3C3C3"
                android:textSize="14sp"/>
        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>