<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xmd.technician.window.WorkTimeActivity">

    <include layout="@layout/toolbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/work_time_padding"
        android:layout_marginLeft="@dimen/search_margin"
        android:layout_marginTop="@dimen/work_time_padding"
        android:text="@string/current_work_time"
        android:textColor="@color/colorBody"
        android:textSize="@dimen/fontTitle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_divide_height"
        android:background="@color/colorLineDivide" />

    <LinearLayout
        android:id="@+id/work_time_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/personal_item_height"
        android:background="@drawable/personal_item_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/personal_margin"
            android:layout_marginRight="@dimen/personal_margin"
            android:gravity="center"
            android:text="@string/work_time_text"
            android:textColor="@color/colorBody"
            android:textSize="@dimen/fontTitle" />

        <TextView
            android:id="@+id/work_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/none_selected"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/fontTitle" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_divide_height"
        android:background="@color/colorLineDivide" />

    <LinearLayout
        android:id="@+id/work_day_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/personal_item_height"
        android:background="@drawable/personal_item_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/personal_margin"
            android:layout_marginRight="@dimen/personal_margin"
            android:gravity="center"
            android:text="@string/work_day_text"
            android:textColor="@color/colorBody"
            android:textSize="@dimen/fontTitle" />

        <TextView
            android:id="@+id/work_day"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/none_selected"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/fontTitle" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_divide_height"
        android:background="@color/colorLineDivide" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/personal_margin"
        android:layout_marginTop="@dimen/personal_padding"
        android:text="@string/time_activity_desc"
        android:textColor="@color/colorRemark"
        android:textSize="@dimen/fontRemark" />
</LinearLayout>
