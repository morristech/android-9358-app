<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_view"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"

              android:paddingTop="13dp">

    <TextView
        android:id="@+id/timestamp"
        style="@style/chat_text_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/view_margin_left"
        android:paddingLeft="@dimen/chat_head_padding"
        android:layout_marginTop="@dimen/small_space">

        <com.xmd.technician.widget.CircleAvatarView
            android:id="@+id/avatar"
            android:layout_width="@dimen/avatar_head"
            android:layout_height="@dimen/avatar_head"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/icon22"/>

        <LinearLayout
            android:id="@+id/bubble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time"

            android:layout_toRightOf="@+id/avatar"
            android:background="@drawable/comment_game_rect_bg"
            android:orientation="vertical"
            android:paddingTop="@dimen/game_content_padding_top"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/margin_15"
                    android:text="@string/invite_text"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/fontTitle_small"/>

                <TextView
                    android:id="@+id/accept_or_refuse_invite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/fontRemark"
                    android:visibility="gone"/>
            </LinearLayout>


            <TextView
                android:id="@+id/game_need_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_15"
                android:paddingLeft="@dimen/margin_15"
                android:paddingRight="@dimen/margin_5"
                android:text="比大小，每局胜方将获得负方10积分"
                android:textSize="@dimen/fontNormal"/>

            <View
                style="@style/horizontal_divider_line"
                android:layout_marginTop="@dimen/margin_20"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/game_refuse"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/personal_item_height"
                    android:layout_weight="1"
                    android:background="@null"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:text="@string/refuse"
                    android:gravity="center"
                    android:textColor="@color/selector_game_text_cancel"
                    android:textSize="@dimen/fontTitle_small"/>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorRemarkText"/>

                <Button
                    android:id="@+id/game_accept"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/personal_item_height"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="@string/accept"
                    android:gravity="center"
                    android:textColor="@color/selector_game_text_accept"
                    android:textSize="@dimen/fontTitle_small"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_userid"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/inter_space"
            android:layout_toRightOf="@id/avatar"
            android:textSize="@dimen/fontBody"
            android:visibility="gone"/>
    </RelativeLayout>

</LinearLayout>