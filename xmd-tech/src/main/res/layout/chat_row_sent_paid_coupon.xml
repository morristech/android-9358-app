<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:paddingTop="13dp">

    <TextView
        android:id="@+id/timestamp"
        style="@style/chat_text_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/chat_head_padding"
        android:layout_marginTop="@dimen/small_space">

        <com.xmd.technician.widget.CircleAvatarView
            android:id="@+id/avatar"
            android:layout_width="@dimen/avatar_head"
            android:layout_height="@dimen/avatar_head"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/icon22"/>

        <LinearLayout
            android:id="@+id/bubble"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_below="@+id/time"
            android:layout_toLeftOf="@+id/avatar"
            android:background="@drawable/sent_coupon_bg"
            android:orientation="vertical"
            android:visibility="visible">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/qdz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/qdz" />


                <TextView
                    android:id="@+id/paid_coupon_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/coupon_type_bg"
                    android:textColor="@color/text_color_yellow"
                    android:textSize="@dimen/fontRemark"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/paid_coupon_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/qdz"
                    android:layout_marginLeft="@dimen/small_space"
                    android:gravity="right"
                    android:layout_centerVertical="true"
                    android:lines="1"
                    android:text="@string/app_info_title"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/fontBody"
                    />

            </RelativeLayout>


            <TextView
                android:id="@+id/coupon_period"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_marginTop="@dimen/margin_right_10"
                android:ellipsize="end"
                android:gravity="right|bottom"
                android:paddingTop="@dimen/margin_5"
                android:singleLine="true"
                android:text="2106.3"
                android:textColor="@color/colorRemark"
                android:textSize="@dimen/fontRemark"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/msg_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/bubble"
            android:clickable="true"
            android:src="@drawable/chat_sent_failed"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_ack"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/bubble"
            android:text="@string/text_ack_msg"
            android:textSize="12sp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tv_delivered"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/bubble"
            android:text="@string/text_delivered_msg"
            android:textSize="12sp"
            android:visibility="invisible"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/bubble"
            android:visibility="visible"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/paid_coupon_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/reward_tip_bg"
        android:drawableLeft="@drawable/icon07"
        android:drawablePadding="@dimen/personal_padding"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/margin_5"
        android:paddingLeft="@dimen/personal_padding"
        android:paddingRight="@dimen/personal_padding"
        android:paddingTop="@dimen/margin_5"
        android:textColor="@color/color_white"
        android:textSize="@dimen/fontRemark"
        android:visibility="gone"/>
</LinearLayout>