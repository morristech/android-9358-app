<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/nearby_bg_gray_light"
              android:orientation="horizontal">

    <View
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:background="@color/link_button"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_nearby_hi"
            android:drawablePadding="@dimen/small_space"
            android:text="可打招呼"
            android:textColor="@color/nearby_text_gray_light"
            android:textSize="@dimen/fontBody"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_v_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cus_item_hello_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/nearby_text_gray_dark"
                android:textSize="@dimen/fontHeadline"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="次"
                android:textColor="@color/nearby_text_gray_dark"
                android:textSize="@dimen/fontBiggerThanNormal"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_nearby_booking"
            android:drawablePadding="@dimen/small_space"
            android:text="预约"
            android:textColor="@color/nearby_text_gray_light"
            android:textSize="@dimen/fontBody"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_v_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cus_item_booking_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/nearby_text_gray_dark"
                android:textSize="@dimen/fontHeadline"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="次"
                android:textColor="@color/nearby_text_gray_dark"
                android:textSize="@dimen/fontBiggerThanNormal"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_nearby_reward"
            android:drawablePadding="@dimen/small_space"
            android:text="打赏"
            android:textColor="@color/nearby_text_gray_light"
            android:textSize="@dimen/fontBody"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_v_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cus_item_reward_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/nearby_text_gray_dark"
                android:textSize="@dimen/fontHeadline"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="@color/nearby_text_gray_dark"
                android:textSize="@dimen/fontBiggerThanNormal"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>