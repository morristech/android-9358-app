<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/margin_10"
              android:layout_marginRight="@dimen/margin_10"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ranking_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/small_space"
        android:paddingTop="@dimen/small_space"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/inter_space"
            android:paddingRight="@dimen/inter_space"
            android:text="排名"
        />
        <View
            style="@style/vertical_divider_line"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="技师[工号]"/>
        <View
            style="@style/vertical_divider_line"/>
        <TextView
            android:id="@+id/sort_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/inter_space"
            android:paddingRight="@dimen/inter_space"
            android:text="好评"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:padding="@dimen/margin_10">

        <ImageView
            android:id="@+id/img_ranking_number"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/inter_space"
            android:src="@drawable/icon_nub_01"/>

        <TextView
            android:id="@+id/text_ranking_number"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/inter_space"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/color_main_title"
            android:textSize="@dimen/fontSize"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:orientation="vertical">

            <com.xmd.technician.widget.RoundImageView
                android:id="@+id/img_tech_head"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/icon22"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/small_space"
            android:layout_weight="1.2"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_tech_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/small_space"
                android:textColor="@color/color_main_title"
                android:textSize="@dimen/fontTitle"
                tools:text="李佳绩"/>
            <TextView
                android:id="@+id/tv_tech_serialNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="6dp"
                android:textColor="@color/color_main_title"
                android:textSize="@dimen/fontNormal"
                android:visibility="gone"
                tools:text="[ 0021 ]"/>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_ranking_member_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/small_space"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="@dimen/small_space"
            android:textColor="@color/color_main_btn"
            android:textSize="@dimen/fontTitle"
            tools:text="157个"/>

    </LinearLayout>
    <View
        style="@style/horizontal_divider_line"/>

</LinearLayout>