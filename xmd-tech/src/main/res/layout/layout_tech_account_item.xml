<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/feedback_btn_width"
                                    android:layout_marginLeft="@dimen/search_margin"
                                    android:layout_marginRight="@dimen/search_margin"
                                    android:layout_marginTop="@dimen/search_margin"
                                    android:clickable="true"
                                    android:foreground="?android:attr/selectableItemBackground">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/search_margin"
        android:layout_marginTop="@dimen/personal_padding"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_account_head"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon30"/>

        <TextView
            android:id="@+id/account_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/inter_space"
            android:text="@string/customer_reward"
            android:textColor="@color/color_main_title"
            android:textSize="@dimen/fontTitle"/>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/search_margin"
        android:layout_marginLeft="@dimen/personal_item_height"
        android:text="ï¿¥"
        android:textColor="@color/color_main_remark"
        android:textSize="@dimen/fontTitle"/>

    <TextView
        android:id="@+id/reward_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/message_item_height"
        android:text="0"
        android:textColor="@color/color_main_remark"
        android:textSize="@dimen/fontBig"/>

    <TextView
        android:id="@+id/account_consume"
        android:layout_width="@dimen/message_item_height"
        android:layout_height="@dimen/work_time_padding"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="@dimen/personal_padding"
        android:layout_marginRight="@dimen/search_margin"
        android:gravity="center"
        android:text="@string/consume"
        android:textColor="@color/button_press_bg"
        android:textSize="@dimen/fontBody"/>
</android.support.v7.widget.CardView>
