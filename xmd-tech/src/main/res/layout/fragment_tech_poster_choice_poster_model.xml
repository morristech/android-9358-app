<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#393945"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:clickable="false"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="4dp">

        <com.xmd.technician.widget.RoundImageView
            android:id="@+id/img_select_model"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/img_poster_flower_big"
            app:borderRadius="5dp"
            app:type="round"/>

    </android.support.v7.widget.CardView>
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:background="#33ffffff"
        android:paddingLeft="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_model_square"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/poster_model_bg_selector"
                android:padding="2dp"
                android:src="@drawable/img_poster_square_small"/>

            <ImageView
                android:id="@+id/img_model_circular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:background="@drawable/poster_model_bg_selector"
                android:padding="2dp"
                android:src="@drawable/img_poster_circular_small"/>

            <ImageView
                android:id="@+id/img_model_flower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:background="@drawable/poster_model_bg_selector"
                android:padding="2dp"
                android:src="@drawable/img_poster_flower_small"/>
            <ImageView
                android:id="@+id/img_model_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:background="@drawable/poster_model_bg_selector"
                android:padding="2dp"
                android:src="@drawable/img_poster_blue_small"/>

            <ImageView
                android:id="@+id/img_model_earnest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:background="@drawable/poster_model_bg_selector"
                android:padding="2dp"
                android:src="@drawable/img_poster_earnest_small"/>
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>