<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_main"
              android:orientation="vertical">

    <com.xmd.technician.widget.SmoothProgressBar
        android:id="@+id/download_progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_divide_height"
        android:max="1000"
        android:progressDrawable="@drawable/icon11"/>

    <WebView
        android:id="@+id/mainwebView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/line_divide_height"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_divide_height"
        android:background="@color/color_line_divide"/>

    <LinearLayout
        android:id="@+id/menu_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:minHeight="44dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/back_ImageView"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/ic_back_selector"/>

        <ImageView
            android:id="@+id/refresh_ImageView"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/ic_refresh_selector"/>

        <ImageView
            android:id="@+id/go_next_ImageView"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/ic_go_selector"/>

        <ImageView
            android:id="@+id/home_ImageView"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:src="@drawable/ic_home_selector"/>
    </LinearLayout>

</LinearLayout>