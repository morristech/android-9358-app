<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/white_background_selector"
              android:orientation="vertical"
              android:paddingLeft="@dimen/inter_space"
              android:paddingRight="@dimen/inter_space"
              android:paddingTop="@dimen/inter_space">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.xmd.technician.widget.CircleImageView
            android:id="@+id/contact_recent_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:background="@drawable/icon22"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/small_space"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/contact_recent_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/small_space"
                    android:textColor="@color/colorHead"
                    android:textSize="@dimen/fontHead"
                    tools:text="黄小姐"/>

                <ImageView
                    android:id="@+id/iv_contact_recent_type_fans"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="@dimen/small_space"
                    android:src="@drawable/icon_contact_fans"/>

                <ImageView
                    android:id="@+id/iv_contact_recent_type_wx"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="@dimen/small_space"
                    android:src="@drawable/icon_contact_wx"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_2"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_contact_recent_visit_type"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_marginLeft="@dimen/small_space"
                    android:layout_gravity="center_vertical"
                   />

                <TextView
                    android:id="@+id/contact_recent_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/small_space"
                    android:layout_gravity="center_vertical"
                    android:textColor="#777777"
                    android:textSize="@dimen/fontBody"
                    tools:text="访问了我"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/contact_visitor_to_chat"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_chat_selector"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_2"
                android:paddingTop="@dimen/margin_2"
                android:text="打招呼"
                android:layout_gravity="center"
                android:textColor="@color/color_white"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/contact_visitor_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/inter_space"
                android:gravity="center"
                android:paddingBottom="@dimen/margin_2"
                android:paddingTop="@dimen/margin_2"
                android:text="27分钟前"
                android:textColor="#777777"
                android:textSize="11sp"/>
        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/horizontal_divider_line"
        android:layout_marginTop="5dp"/>
</LinearLayout>