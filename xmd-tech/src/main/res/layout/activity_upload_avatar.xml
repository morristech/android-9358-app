<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.xmd.technician.window.UploadAvatarActivity">

    <include layout="@layout/toolbar" />

    <com.xmd.technician.widget.RoundImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/comment_item_height"
        android:layout_height="@dimen/comment_item_height"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="@dimen/work_time_padding"
        android:layout_centerInParent="true"
        android:background="@drawable/icon22"
        app:type="round"
        app:borderRadius="@dimen/search_margin" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avatar"
        android:layout_marginTop="@dimen/work_time_padding"
        android:layout_marginLeft="@dimen/personal_margin"
        android:layout_marginRight="@dimen/personal_margin"
        android:background="@drawable/login_button_main_selector"
        android:enabled="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/fontTitle"
        android:text="@string/complete"/>
</RelativeLayout>
