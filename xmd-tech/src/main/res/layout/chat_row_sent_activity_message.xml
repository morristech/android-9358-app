<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:orientation="vertical"

              android:paddingTop="13dp">

    <TextView
        android:id="@+id/timestamp"
        style="@style/chat_text_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_space"
        android:paddingRight="@dimen/chat_head_padding"
        >

        <com.xmd.technician.widget.CircleImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/avatar_head"
            android:layout_height="@dimen/avatar_head"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/icon22"/>

        <RelativeLayout
            android:id="@+id/bubble"
            android:layout_width="@dimen/bubble_width"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/small_space"
            android:layout_toLeftOf="@id/avatar"
            android:background="@drawable/sent_text_white"
            >

            <ImageView
                android:id="@+id/iv_activity_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/icon_indiana"/>

            <TextView
                android:id="@+id/tv_activity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_space"
                android:layout_toRightOf="@id/iv_activity_icon"
                android:text="一元夺"
                android:textColor="@color/colorHead"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_activity_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_activity_title"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/iv_activity_icon"
                android:gravity="center|left"
                android:lineSpacingExtra="2dp"
                android:maxWidth="150dp"
                android:paddingLeft="@dimen/small_space"
                android:paddingRight="6dp"
                android:text="我和你只有一块钱的距离"
                android:textColor="#C3C3C3"
                android:textSize="14sp"/>
        </RelativeLayout>


        <ImageView
            android:id="@+id/msg_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/bubble"
            android:clickable="true"
            android:src="@drawable/chat_sent_failed"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_ack"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/bubble"
            android:text="@string/text_ack_msg"
            android:textSize="12sp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tv_delivered"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/bubble"
            android:text="@string/text_delivered_msg"
            android:textSize="12sp"
            android:visibility="invisible"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/bubble"
            android:visibility="visible"/>
    </RelativeLayout>

</LinearLayout>