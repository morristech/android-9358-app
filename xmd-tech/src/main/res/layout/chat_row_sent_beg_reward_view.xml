<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:paddingTop="13dp">

    <TextView
        android:id="@+id/timestamp"
        style="@style/chat_text_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/chat_head_padding"
        android:layout_marginTop="@dimen/small_space">

        <com.xmd.technician.widget.CircleImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/avatar_head"
            android:layout_height="@dimen/avatar_head"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/icon22"/>

        <RelativeLayout
            android:id="@+id/bubble"
            android:layout_width="@dimen/bubble_width"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/small_space"
            android:layout_toLeftOf="@id/avatar"
            android:gravity="right"
            >
            <TextView
                android:id="@+id/user_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sent_reward"
                android:gravity="center_vertical"
                android:minHeight="@dimen/avatar_head"
                tools:text="@string/request_user_reward"
                android:textColor="@color/color_white"
                android:textSize="@dimen/fontBody"
                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_reward"
                android:layout_marginTop="@dimen/small_space"
                android:visibility="gone">
                <TextView
                    android:id="@+id/reward_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/reward_tip_bg"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/hb"
                    android:paddingTop="@dimen/search_margin"
                    android:paddingBottom="@dimen/search_margin"
                    android:paddingLeft="@dimen/personal_padding"
                    android:paddingRight="@dimen/personal_padding"
                    android:drawablePadding="@dimen/personal_padding"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/fontRemark"
                    />
            </FrameLayout>
        </RelativeLayout>


        <ImageView
            android:id="@+id/msg_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/bubble"
            android:clickable="true"
            android:src="@drawable/chat_sent_failed"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_ack"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/bubble"
            android:text="@string/text_ack_msg"
            android:textSize="12sp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tv_delivered"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/bubble"
            android:text="@string/text_delivered_msg"
            android:textSize="12sp"
            android:visibility="invisible"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/bubble"
            android:visibility="visible"/>
    </RelativeLayout>

</LinearLayout>