<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:paddingTop="13dp">

    <TextView
        android:id="@+id/timestamp"
        style="@style/chat_text_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/view_margin_left"
        android:paddingRight="@dimen/chat_head_padding"
        android:layout_marginTop="@dimen/small_space">

        <com.xmd.technician.widget.CircleAvatarView
            android:id="@+id/avatar"
            android:layout_width="@dimen/avatar_head"
            android:layout_height="@dimen/avatar_head"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/icon22"/>

        <LinearLayout
            android:id="@+id/bubble"
            android:layout_width="@dimen/bubble_width"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/avatar"
            android:background="@drawable/sent_order_bg"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/order_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/personal_padding"
                android:layout_marginTop="@dimen/personal_padding"
                android:text="@string/app_info_title"
                android:textColor="@color/contact_info_unit"
                android:textSize="@dimen/fontTitle"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/personal_padding">

                <TextView
                    android:id="@+id/order_time_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/personal_padding"
                    android:text="@string/app_info_title"
                    android:textColor="@color/colorBody"
                    android:textSize="@dimen/fontBody"/>

                <TextView
                    android:id="@+id/order_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/personal_padding"
                    android:text="@string/app_info_title"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/fontBody"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/personal_padding"
                android:layout_marginTop="@dimen/personal_padding">

                <TextView
                    android:id="@+id/order_service_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/personal_padding"
                    android:text="@string/app_info_title"
                    android:textColor="@color/colorBody"
                    android:textSize="@dimen/fontBody"/>

                <TextView
                    android:id="@+id/order_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/personal_padding"
                    android:text="@string/app_info_title"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/fontBody"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/order_menu_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_service"
                android:background="@drawable/bg"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/personal_padding"
                android:paddingRight="@dimen/personal_padding"
                android:visibility="gone">

                <Button
                    android:id="@+id/order_accept"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/work_time_padding"
                    android:layout_weight="1"
                    android:background="@drawable/login_button_main_selector"
                    android:drawableLeft="@drawable/ic_baisegouxuan"
                    android:paddingLeft="@dimen/search_margin"
                    android:text="@string/accept"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/fontBody"/>

                <Button
                    android:id="@+id/order_refuse"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/work_time_padding"
                    android:layout_marginLeft="@dimen/personal_margin"
                    android:layout_weight="1"
                    android:background="@drawable/account_button_selector_bg"
                    android:drawableLeft="@drawable/ic_hongseguanbi"
                    android:gravity="center"
                    android:paddingLeft="@dimen/search_margin"
                    android:text="@string/refuse"
                    android:textColor="@color/colorMainBtn"
                    android:textSize="@dimen/fontBody"/>
            </LinearLayout>
        </LinearLayout>


        <ImageView
            android:id="@+id/msg_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/bubble"
            android:clickable="true"
            android:src="@drawable/chat_sent_failed"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_ack"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/bubble"
            android:text="@string/text_ack_msg"
            android:textSize="12sp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tv_delivered"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/bubble"
            android:text="@string/text_delivered_msg"
            android:textSize="12sp"
            android:visibility="invisible"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/bubble"
            android:visibility="visible"/>
    </RelativeLayout>

</LinearLayout>