<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@drawable/icon_title_left"
                android:drawablePadding="@dimen/margin_10"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_10"
                android:text="@string/tech_poster_edit_step_two"
                />

            <View
                style="@style/horizontal_divider_line"/>

            <ImageView
                android:id="@+id/img_poster_select_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/margin_10"
                android:scaleType="fitXY"
                android:src="@drawable/img_group_add_img"
                />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_poster_preview"
            android:layout_width="120dp"
            android:layout_height="165dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/small_space"
            android:background="@drawable/poster_preview_bg"
            android:paddingTop="15dp">

            <ImageView
                android:id="@+id/img_poster_preview"
                android:layout_width="115dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/img_poster_flower_small"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/icon_poster_preview"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@color/color_white"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableLeft="@drawable/icon_title_left"
            android:drawablePadding="@dimen/margin_10"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_10"
            android:text="@string/tech_poster_edit_step_three"
            />

        <View
            style="@style/horizontal_divider_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="12dp">

            <View
                android:id="@+id/iv_poster_primary_title"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/poster_content_select_bg"/>

            <TextView
                android:layout_width="@dimen/poster_title_wight"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="@string/tech_poster_edit_primary_title"
                android:textColor="@color/colorTitle"
                android:textSize="16sp"
                />

            <com.xmd.technician.widget.ClearableEditText
                android:id="@+id/edit_poster_primary_title"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_weight="1"
                android:background="@drawable/shape_bg_edit_text"
                android:gravity="center_vertical"
                android:hint="@string/tech_poster_edit_primary_titleï¼¿hint"
                android:paddingLeft="@dimen/inter_space"
                android:paddingRight="@dimen/inter_space"
                android:textColorHint="#cccccc"
                android:maxLength="6"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="12dp">

            <View
                android:id="@+id/iv_poster_minor_title"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/poster_content_select_bg"/>

            <TextView
                android:layout_width="@dimen/poster_title_wight"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="@string/tech_poster_edit_minor_title"
                android:textColor="@color/colorTitle"
                android:textSize="16sp"
                />

            <com.xmd.technician.widget.ClearableEditText
                android:id="@+id/edit_poster_minor_title"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_weight="1"
                android:background="@drawable/shape_bg_edit_text"
                android:gravity="center_vertical"
                android:hint="@string/tech_poster_edit_minor_title_hint"
                android:paddingLeft="@dimen/inter_space"
                android:paddingRight="@dimen/inter_space"
                android:textColorHint="#cccccc"
                android:maxLength="12"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="12dp">

            <View
                android:id="@+id/iv_poster_tech_name"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/poster_content_select_bg"/>

            <TextView
                android:layout_width="@dimen/poster_title_wight"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="@string/tech_poster_edit_nick_name"
                android:textColor="@color/colorTitle"
                android:textSize="16sp"
                />

            <com.xmd.technician.widget.ClearableEditText
                android:id="@+id/edit_poster_tech_name"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_weight="1"
                android:background="@drawable/shape_bg_edit_text"
                android:gravity="center_vertical"
                android:hint="@string/tech_poster_edit_nick_name_hint"
                android:paddingLeft="@dimen/inter_space"
                android:paddingRight="@dimen/inter_space"
                android:textColorHint="#cccccc"
                android:maxLength="10"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="12dp">

            <View
                android:id="@+id/iv_poster_tech_number"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/poster_content_select_bg"/>

            <TextView
                android:layout_width="@dimen/poster_title_wight"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="@string/tech_poster_edit_tech_number"
                android:textColor="@color/colorTitle"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/edit_poster_tech_number"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_weight="1"
                android:background="@drawable/shape_bg_edit_text"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/inter_space"
                android:paddingRight="@dimen/inter_space"
                android:textColor="#cccccc"
                tools:text="A1008"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="12dp">

            <View
                android:id="@+id/iv_poster_club_name"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/poster_content_select_bg"/>

            <TextView
                android:layout_width="@dimen/poster_title_wight"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:text="@string/tech_poster_edit_club_name"
                android:textColor="@color/colorTitle"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/edit_poster_club_name"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_weight="1"
                android:background="@drawable/shape_bg_edit_text"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/inter_space"
                android:paddingRight="@dimen/inter_space"
                android:textColor="#cccccc"
                android:textColorHint="#cccccc"
                tools:text="ä¼æåç§°"
                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>