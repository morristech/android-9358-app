<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingTop="13dp">

    <TextView
        android:id="@+id/timestamp"
        style="@style/chat_text_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/view_margin_left"
        android:paddingLeft="@dimen/chat_head_padding"
        android:layout_marginTop="@dimen/small_space">

        <com.xmd.technician.widget.CircleAvatarView
            android:id="@+id/avatar"
            android:layout_width="@dimen/avatar_head"
            android:layout_height="@dimen/avatar_head"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/icon22"/>

        <RelativeLayout
            android:id="@+id/bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_userid"
            android:layout_marginLeft="@dimen/small_space"
            android:layout_toRightOf="@id/avatar"
            android:gravity="center">
            <TextView
                android:id="@+id/user_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/recv_reward"
                android:gravity="center_vertical"
                android:textColor="@color/color_white"
                android:textSize="@dimen/fontBody" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_reward"
                android:layout_marginTop="@dimen/small_space"
                android:visibility="visible">
                <TextView
                    android:id="@+id/reward_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/reward_tip_bg"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/hb"
                    android:paddingTop="@dimen/search_margin"
                    android:paddingBottom="@dimen/search_margin"
                    android:paddingLeft="@dimen/personal_padding"
                    android:paddingRight="@dimen/personal_padding"
                    android:drawablePadding="@dimen/personal_padding"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/fontRemark"
                    />
            </FrameLayout>
        </RelativeLayout>


        <TextView
            android:id="@+id/tv_userid"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/inter_space"
            android:layout_toRightOf="@id/avatar"
            android:textSize="@dimen/fontBody"
            android:visibility="gone"/>
    </RelativeLayout>

</LinearLayout>