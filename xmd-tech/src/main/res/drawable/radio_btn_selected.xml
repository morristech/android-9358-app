<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <stroke android:color="@color/color_white" android:width="@dimen/stroke_width" />
            <corners android:bottomLeftRadius="@dimen/radio_btn_corner" android:topLeftRadius="@dimen/radio_btn_corner" android:radius="6dp"/>
             <stroke android:color="@color/radio_btn_normal"/>
            <size android:width="70dp" android:height="35dp"></size>
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <stroke android:color="@color/color_white" android:width="@dimen/stroke_width" />
            <corners android:bottomLeftRadius="@dimen/radio_btn_corner" android:topLeftRadius="@dimen/radio_btn_corner" android:radius="10dp"/>
            <stroke android:color="@color/color_white"/>
        </shape>
    </item>

</selector>